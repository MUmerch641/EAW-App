@using Microsoft.AspNetCore.Components.Web

@if (HasError)
{
    <div class="error-boundary">
        <div class="error-container">
            <div class="error-icon">‚ö†Ô∏è</div>
            <h3 class="error-title">Oops! Something went wrong</h3>
            <p class="error-message">@ErrorMessage</p>
            
            @if (ShowDetails && !string.IsNullOrEmpty(ErrorDetails))
            {
                <div class="error-details">
                    <details>
                        <summary>Technical Details</summary>
                        <pre>@ErrorDetails</pre>
                    </details>
                </div>
            }
            
            <div class="error-actions">
                <button class="btn btn-primary" @onclick="Retry">
                    üîÑ Try Again
                </button>
                <button class="btn btn-secondary" @onclick="GoHome">
                    üè† Go Home
                </button>
            </div>
        </div>
    </div>
}
else
{
    @ChildContent
}

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool ShowDetails { get; set; } = false;
    [Parameter] public EventCallback OnRetry { get; set; }
    [Parameter] public EventCallback OnGoHome { get; set; }

    private bool HasError { get; set; }
    private string ErrorMessage { get; set; } = string.Empty;
    private string ErrorDetails { get; set; } = string.Empty;

    public void ShowError(Exception exception)
    {
        HasError = true;
        ErrorMessage = GetUserFriendlyMessage(exception);
        ErrorDetails = exception.ToString();
        StateHasChanged();
    }

    private string GetUserFriendlyMessage(Exception exception)
    {
        return exception switch
        {
            HttpRequestException => "Unable to connect to the server. Please check your internet connection.",
            TaskCanceledException => "The request timed out. Please try again.",
            UnauthorizedAccessException => "You don't have permission to access this resource.",
            ArgumentException => "Invalid data was provided. Please check your input.",
            _ => "An unexpected error occurred. Please try again or contact support if the problem persists."
        };
    }

    private async Task Retry()
    {
        HasError = false;
        ErrorMessage = string.Empty;
        ErrorDetails = string.Empty;
        
        if (OnRetry.HasDelegate)
        {
            await OnRetry.InvokeAsync();
        }
        
        StateHasChanged();
    }

    private async Task GoHome()
    {
        if (OnGoHome.HasDelegate)
        {
            await OnGoHome.InvokeAsync();
        }
    }
}


