@page "/offline"
@inject MauiHybridApp.Services.Navigation.INavigationService NavigationService
@using Microsoft.Maui.Networking

<div class="d-flex flex-column align-items-center justify-content-center h-100 p-4 text-center animate-fade-in-up">
    <div class="mb-4">
        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 120px; height: 120px;">
            <i class="fas fa-wifi fa-4x text-muted opacity-50"></i>
            <i class="fas fa-slash position-absolute text-danger fa-4x" style="opacity: 0.7;"></i>
        </div>
    </div>
    
    <h3 class="fw-bold text-dark mb-2">No Internet Connection</h3>
    <p class="text-muted mb-5" style="max-width: 300px;">
        Please check your internet connection and try again.
    </p>

    <button class="btn btn-outline-primary rounded-pill px-5 py-3 fw-bold shadow-sm hover-scale mb-3" @onclick="CheckConnection">
        <i class="fas fa-sync-alt me-2"></i> Try Again
    </button>
</div>

@code {
    private async Task CheckConnection()
    {
        if (Connectivity.Current.NetworkAccess == NetworkAccess.Internet)
        {
            await NavigationService.NavigateBackAsync();
        }
        else
        {
            // Optional: Shake animation or toast
        }
    }
}
