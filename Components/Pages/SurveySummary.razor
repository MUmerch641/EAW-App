@page "/survey/success"
@inject NavigationManager Navigation

<div class="page-container">
    <div class="success-card">
        <div class="icon-circle">
            <i class="fas fa-check"></i>
        </div>
        <h1>Thank You!</h1>
        <p>Your survey response has been submitted successfully.</p>
        
        <button class="btn-primary" @onclick="GoBack">
            Back to Surveys
        </button>
    </div>
</div>

<style>
    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f9fa;
        padding: 1rem;
    }

    .success-card {
        background: white;
        padding: 3rem 2rem;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        max-width: 400px;
        width: 100%;
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        background-color: #e8f8f5;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto 1.5rem;
    }

    .icon-circle i {
        font-size: 2.5rem;
        color: #2ecc71;
    }

    h1 {
        color: #2c3e50;
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }

    p {
        color: #7f8c8d;
        margin-bottom: 2rem;
        line-height: 1.5;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: #2980b9;
    }
</style>

@code {
    private void GoBack()
    {
        Navigation.NavigateTo("/surveys");
    }
}
