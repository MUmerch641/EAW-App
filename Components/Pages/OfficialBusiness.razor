@page "/official-business"
@using System.ComponentModel
@using MauiHybridApp.ViewModels
@inject OfficialBusinessViewModel ViewModel
@implements IDisposable

<div class="page-container">
    <PageHeader 
        Title="Official Business" 
        Subtitle="Submit official business request" 
        IconClass="fa-briefcase" />
    
    @if (ViewModel.IsBusy)
    {
        <LoadingIndicator Message="Loading..." />
    }
    else
    {
        <div class="form-container">
            @if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
            {
                <AlertMessage Type="error" Message="@ViewModel.ErrorMessage" />
            }
            
            @if (!string.IsNullOrEmpty(ViewModel.SuccessMessage))
            {
                <AlertMessage Type="success" Message="@ViewModel.SuccessMessage" />
            }
            
            <div class="form-section">
                <h3 class="section-title">Official Business Details</h3>
                
                <FormGroup Label="Date" IsRequired="true">
                    <input type="date" 
                           class="form-control" 
                           value="@ViewModel.OBRequest.OfficialBusinessDate.ToString("yyyy-MM-dd")"
                           @onchange="@((e) => ViewModel.OBRequest.OfficialBusinessDate = DateTime.Parse(e.Value?.ToString() ?? DateTime.Today.ToString()))" />
                </FormGroup>
                
                <div class="form-row">
                    <FormGroup Label="Start Time" IsRequired="true">
                        <input type="time" 
                               class="form-control" 
                               value="@(ViewModel.OBRequest.StartTime?.ToString("HH:mm") ?? "08:00")"
                               @onchange="@((e) => ViewModel.OBRequest.StartTime = DateTime.Parse($"{ViewModel.OBRequest.OfficialBusinessDate:yyyy-MM-dd} {e.Value}"))" />
                    </FormGroup>
                    
                    <FormGroup Label="End Time" IsRequired="true">
                        <input type="time" 
                               class="form-control" 
                               value="@(ViewModel.OBRequest.EndTime?.ToString("HH:mm") ?? "17:00")"
                               @onchange="@((e) => ViewModel.OBRequest.EndTime = DateTime.Parse($"{ViewModel.OBRequest.OfficialBusinessDate:yyyy-MM-dd} {e.Value}"))" />
                    </FormGroup>
                </div>
                
                <div class="info-card">
                    <div class="info-item">
                        <span class="info-label">Total Hours:</span>
                        <span class="info-value">@ViewModel.TotalHours.ToString("F2") hours</span>
                    </div>
                </div>
                
                <FormGroup Label="Purpose/Reason" IsRequired="true">
                    <textarea class="form-control" 
                              rows="4" 
                              placeholder="Enter purpose of official business..."
                              @bind="ViewModel.OBRequest.Reason"></textarea>
                </FormGroup>
                
                <FormGroup Label="Remarks">
                    <textarea class="form-control" 
                              rows="3" 
                              placeholder="Additional remarks (optional)..."
                              @bind="ViewModel.OBRequest.Remarks"></textarea>
                </FormGroup>
            </div>
            
            <div class="form-actions">
                <ActionButton 
                    Text="Submit Request" 
                    OnClick="@(() => ViewModel.SubmitCommand.Execute(null))" 
                    IsDisabled="@ViewModel.IsBusy"
                    IsPrimary="true"
                    IconClass="fa-paper-plane" />
                    
                <ActionButton 
                    Text="Cancel" 
                    OnClick="@(() => ViewModel.GoBackCommand.Execute(null))" 
                    IsDisabled="@ViewModel.IsBusy"
                    IsPrimary="false"
                    IconClass="fa-times" />
            </div>
        </div>
    }
</div>

@code {
    private PropertyChangedEventHandler? _propertyChangedHandler;

    protected override async Task OnInitializedAsync()
    {
        _propertyChangedHandler = (sender, e) => _ = InvokeAsync(StateHasChanged);
        ViewModel.PropertyChanged += _propertyChangedHandler;
        
        await ViewModel.InitializeAsync();
    }
    
    public void Dispose()
    {
        if (_propertyChangedHandler != null && ViewModel != null)
        {
            ViewModel.PropertyChanged -= _propertyChangedHandler;
            _propertyChangedHandler = null;
        }
        
        ViewModel?.Dispose();
    }
}
}
