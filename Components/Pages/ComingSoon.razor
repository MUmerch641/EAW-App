@page "/coming-soon"
@inject NavigationManager Navigation
@inject MauiHybridApp.Services.Navigation.INavigationService NavigationService

<div class="d-flex flex-column align-items-center justify-content-center h-100 p-4 text-center animate-fade-in-up">
    <div class="mb-4">
        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 120px; height: 120px;">
            <i class="fas fa-rocket fa-4x text-primary"></i>
        </div>
    </div>
    
    <h2 class="fw-bold text-dark mb-2">Coming Soon</h2>
    <p class="text-muted mb-5" style="max-width: 300px;">
        We're working hard to bring you this feature. Stay tuned for updates!
    </p>

    <button class="btn btn-primary rounded-pill px-5 py-3 fw-bold shadow-sm hover-scale" @onclick="GoBack">
        <i class="fas fa-arrow-left me-2"></i> Go Back
    </button>
</div>

@code {
    private async Task GoBack()
    {
        await NavigationService.NavigateBackAsync();
    }
}
