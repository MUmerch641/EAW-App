@page "/login"
@page "/"
@inject AuthenticationStateService AuthState
@inject IAuthenticationDataService AuthService
@inject INavigationService NavigationService
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime
@using MauiHybridApp.Services.Data
@using MauiHybridApp.Models

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="images/logo.svg" alt="Everything at Work" class="logo" />
            <h1>Everything at Work</h1>
            <p>Sign in to continue</p>
        </div>

        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <label for="username">Username</label>
                <InputText id="username" class="form-control" @bind-Value="loginModel.Username" placeholder="Enter your username" />
                <ValidationMessage For="@(() => loginModel.Username)" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" placeholder="Enter your password" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }

            <button type="submit" class="btn btn-primary btn-block" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span> Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </button>
        </EditForm>

        <div class="login-footer">
            <a href="/forgot-password">Forgot Password?</a>
            <span class="separator">|</span>
        </div>
    </div>
</div>
<style>
