    :global(html), :global(body) {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden; /* Body scroll roko, sirf container scroll karega */
    }

    /* ðŸ”¥ Main Scrollable Container */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center; /* Center mein rakho */
        
        /* Height logic: Full height lo, lekin keyboard aye to adjust ho jao */
        height: 100vh; 
        width: 100%;
        
        /* Background */
        background: linear-gradient(135deg, #a7b4ec 0%, #b4a1c6 100%);
        
        /* ðŸ”¥ SCROLL MAGIC: Agar content height se bara ho to scroll karo */
        overflow-y: auto; 
        -webkit-overflow-scrolling: touch; /* Smooth scroll on mobile */
        
        /* Padding taake keyboard bilkul chipak na jaye */
        padding: 20px;
        box-sizing: border-box;
    }

    /* Card styling same rahegi */
    .login-card {
        background: white;
        border-radius: 10px;
        padding: 30px; /* Thora padding kam kiya mobile ke liye */
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        
        /* Margin auto taake scroll karte waqt center rahe */
        margin: auto; 
    }

    /* ... Baki styles same rakho ... */
