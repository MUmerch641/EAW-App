@page "/login"
@inject AuthenticationStateService AuthState
@inject IAuthenticationDataService AuthService
@inject INavigationService NavigationService
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime
@using MauiHybridApp.Services.Data
@using MauiHybridApp.Models

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="images/logo.svg" alt="Everything at Work" class="logo" />
            <h1>Everything at Work</h1>
            <p>Sign in to continue</p>
        </div>

        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <label for="username">Username</label>
                <InputText id="username" class="modern-input" @bind-Value="loginModel.Username" placeholder="Enter your username" />
                <ValidationMessage For="@(() => loginModel.Username)" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" class="modern-input" @bind-Value="loginModel.Password" placeholder="Enter your password" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }

            <button type="submit" class="btn btn-primary btn-block" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span> Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </button>
        </EditForm>

        <div class="login-footer">
            <a href="/forgot-password">Forgot Password?</a>
            <span class="separator">|</span>
            <a href="/connection">Client Setup</a>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    protected override void OnInitialized()
    {
        // Set navigation manager for the navigation service
        NavigationService.SetNavigationManager(NavManager);
        
        // If already logged in, redirect to dashboard
        if (AuthState.IsAuthenticated)
        {
            NavManager.NavigateTo("/dashboard");
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Ensure loading screen is hidden when login page renders
            await Task.Delay(100);
            await JSRuntime.InvokeVoidAsync("blazorHelpers.hideLoadingScreen");
        }
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            // Validate input
            if (string.IsNullOrWhiteSpace(loginModel.Username) || string.IsNullOrWhiteSpace(loginModel.Password))
            {
                errorMessage = "Please enter both username and password.";
                return;
            }

            // DEMO MODE: Accept any username/password combination
            /*
            if (loginModel.Username.Length >= 3 && loginModel.Password.Length >= 3)
            {
                // Create demo user
                var demoUser = new UserModel
                {
                    UserSecurityId = 1,
                    Username = loginModel.Username,
                    EmployeeName = $"{loginModel.Username} Doe",
                    EmployeeNo = "EMP001",
                    EmailAddress = $"{loginModel.Username}@demo.com",
                    Position = "Employee",
                    Department = "IT",
                    Company = "Demo Company"
                };

                // Store authentication state
                await AuthState.LoginAsync(demoUser, "demo-token-123");

                // Navigate to dashboard
                await NavigationService.NavigateToAsync("/dashboard");
            }
            else
            {
                errorMessage = "Demo mode: Please use at least 3 characters for username and password.";
            }
            */

            // PRODUCTION CODE:
            // Create login request
            var loginRequest = new LoginRequest
            {
                username = loginModel.Username,
                password = loginModel.Password,
                portal = 0
            };

            // Authenticate with API
            var result = await AuthService.AuthenticateAsync(loginRequest);

            if (result.Success && result.User != null && !string.IsNullOrEmpty(result.Token))
            {
                // Store authentication state
                await AuthState.LoginAsync((UserModel)result.User, result.Token);

                // Navigate to dashboard
                await NavigationService.NavigateToAsync("/dashboard");
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Login failed. Please check your credentials and try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Network error. Please check your connection and try again.";
            System.Diagnostics.Debug.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private class LoginModel
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}

