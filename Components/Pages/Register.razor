            gap: 0;
        }
    }
</style>

@code {
    private RegistrationModel registrationModel = new();
    private bool isLoading = false;
    private bool isRegistered = false;
    private string errorMessage = string.Empty;

    private async Task HandleRegistration()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            // Validate input
            if (string.IsNullOrWhiteSpace(registrationModel.Username) || 
                string.IsNullOrWhiteSpace(registrationModel.Email) ||
                string.IsNullOrWhiteSpace(registrationModel.Password))
            {
                errorMessage = "Please fill in all required fields.";
                return;
            }

            if (registrationModel.Password != registrationModel.ConfirmPassword)
            {
                errorMessage = "Passwords do not match.";
                return;
            }

            // Create registration request
            var request = new RegistrationRequest
            {
                Username = registrationModel.Username,
                Email = registrationModel.Email,
                Password = registrationModel.Password,
                ConfirmPassword = registrationModel.ConfirmPassword,
                FirstName = registrationModel.FirstName,
                LastName = registrationModel.LastName,
                EmployeeNo = registrationModel.EmployeeNo
            };

            // Send registration request
            var result = await AuthService.RegistrationAsync(request);

            if (result.Success)
            {
                isRegistered = true;
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Registration failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Network error. Please check your connection and try again.";
            System.Diagnostics.Debug.WriteLine($"Registration error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoToLogin()
    {
        NavManager.NavigateTo("/login");
    }

    private class RegistrationModel
    {
        public string Username { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
        public string? EmployeeNo { get; set; }
    }
}
