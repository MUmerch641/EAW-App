@page "/register"
@inject IAuthenticationDataService AuthService
@inject NavigationManager NavManager
@using MauiHybridApp.Services.Data

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="images/logo.png" alt="Everything at Work" class="logo" />
            <h1>Create Account</h1>
            <p>Register for Everything at Work</p>
        </div>

        @if (!isRegistered)
        {
            <EditForm Model="@registrationModel" OnValidSubmit="@HandleRegistration">
                <DataAnnotationsValidator />
                
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <InputText id="firstName" class="modern-input" @bind-Value="registrationModel.FirstName" placeholder="Enter your first name" />
                            <ValidationMessage For="@(() => registrationModel.FirstName)" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <InputText id="lastName" class="modern-input" @bind-Value="registrationModel.LastName" placeholder="Enter your last name" />
                            <ValidationMessage For="@(() => registrationModel.LastName)" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <InputText id="email" type="email" class="form-control" @bind-Value="registrationModel.Email" placeholder="Enter your email address" />
                    <ValidationMessage For="@(() => registrationModel.Email)" />
                </div>

                <div class="form-group">
                    <label for="username">Username</label>
                    <InputText id="username" class="form-control" @bind-Value="registrationModel.Username" placeholder="Choose a username" />
                    <ValidationMessage For="@(() => registrationModel.Username)" />
                </div>

                <div class="form-group">
                    <label for="employeeNo">Employee Number (Optional)</label>
                    <InputText id="employeeNo" class="form-control" @bind-Value="registrationModel.EmployeeNo" placeholder="Enter your employee number" />
                    <ValidationMessage For="@(() => registrationModel.EmployeeNo)" />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <InputText id="password" type="password" class="form-control" @bind-Value="registrationModel.Password" placeholder="Create a password" />
                    <ValidationMessage For="@(() => registrationModel.Password)" />
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="registrationModel.ConfirmPassword" placeholder="Confirm your password" />
                    <ValidationMessage For="@(() => registrationModel.ConfirmPassword)" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                <button type="submit" class="btn btn-primary btn-block" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span> Creating Account...</span>
                    }
                    else
                    {
                        <span>Create Account</span>
                    }
                </button>
            </EditForm>
        }
        else
        {
            <div class="success-message">
                <div class="success-icon">
                    <span class="oi oi-check"></span>
                </div>
                <h3>Account Created!</h3>
                <p>Your account has been successfully created.</p>
                <p>You can now sign in with your credentials.</p>
                <button class="btn btn-primary" @onclick="GoToLogin">
                    Go to Login
                </button>
            </div>
        }

        <div class="login-footer">
            <a href="/login">Already have an account? Sign In</a>
        </div>
    </div>
</div>



@code {
    private RegistrationModel registrationModel = new();
    private bool isLoading = false;
    private bool isRegistered = false;
    private string errorMessage = string.Empty;

    private async Task HandleRegistration()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            // Validate input
            if (string.IsNullOrWhiteSpace(registrationModel.Username) || 
                string.IsNullOrWhiteSpace(registrationModel.Email) ||
                string.IsNullOrWhiteSpace(registrationModel.Password))
            {
                errorMessage = "Please fill in all required fields.";
                return;
            }

            if (registrationModel.Password != registrationModel.ConfirmPassword)
            {
                errorMessage = "Passwords do not match.";
                return;
            }

            // Create registration request
            var request = new RegistrationRequest
            {
                Username = registrationModel.Username,
                Email = registrationModel.Email,
                Password = registrationModel.Password,
                ConfirmPassword = registrationModel.ConfirmPassword,
                FirstName = registrationModel.FirstName,
                LastName = registrationModel.LastName,
                EmployeeNo = registrationModel.EmployeeNo
            };

            // Send registration request
            var result = await AuthService.RegistrationAsync(request);

            if (result.Success)
            {
                isRegistered = true;
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Registration failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Network error. Please check your connection and try again.";
            System.Diagnostics.Debug.WriteLine($"Registration error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoToLogin()
    {
        NavManager.NavigateTo("/login");
    }

    private class RegistrationModel
    {
        public string Username { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
        public string? EmployeeNo { get; set; }
    }
}
