@page "/my-requests"
@using MauiHybridApp.ViewModels
@using MauiHybridApp.Models
@using MauiHybridApp.Services.Navigation
@inject MyRequestViewModel ViewModel
@inject INavigationService NavigationService

<div class="page-container p-0 bg-light-subtle h-100">
    <div class="animate-fade-in-up h-100 d-flex flex-column">
        <!-- Header -->
        <div class="app-header bg-primary text-white p-3 shadow-sm sticky-top z-3">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <button class="btn btn-link text-white p-0 me-3" @onclick="@(() => NavigationService.NavigateBackAsync())">
                        <i class="fas fa-arrow-left fa-lg"></i>
                    </button>
                    <h5 class="mb-0 fw-bold">My Requests</h5>
                </div>
                <button class="btn btn-link text-white p-0" @onclick="@(() => ViewModel.OpenFilterModalCommand.Execute(null))">
                    <i class="fas fa-filter fa-lg"></i>
                </button>
            </div>
            
            <!-- Search Bar -->
            <div class="mt-3">
                 <div class="input-group rounded-pill bg-white/20 border-0 p-1">
                    <span class="input-group-text bg-transparent border-0 text-white"><i class="fas fa-search"></i></span>
                    <input type="text" class="form-control bg-transparent border-0 text-white placeholder-white" 
                           placeholder="Search requests..." 
                           @bind="ViewModel.Keyword"
                           @bind:after="@(() => ViewModel.SearchCommand.ExecuteAsync(null))" />
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="flex-grow-1 overflow-auto p-3 pb-5">
            @if (ViewModel.IsBusy && ViewModel.MyRequests.Count == 0)
            {
                 <div class="d-flex justify-content-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            }
            else if (ViewModel.MyRequests.Count == 0)
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-inbox fa-3x mb-3 text-secondary opacity-50"></i>
                    <p class="mb-0">No requests found</p>
                </div>
            }
            else
            {
                <div class="d-flex flex-column gap-3">
                    @foreach (var item in ViewModel.MyRequests)
                    {
                        <div class="card border-0 shadow-sm rounded-4 overflow-hidden hover-lift" @onclick="@(() => ViewModel.ViewHistoryCommand.Execute(item))">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1 fw-bold text-dark">@item.TransactionType</h6>
                                        <small class="text-muted"><i class="far fa-calendar me-1"></i> @item.DateFiled.ToShortDateString()</small>
                                    </div>
                                    <span class="badge rounded-pill px-3 py-2 fw-normal @GetStatusColor(item.Status)">
                                        @item.Status
                                    </span>
                                </div>
                                <p class="mb-2 text-secondary small text-truncate-2">
                                    @item.Details
                                </p>
                                <div class="d-flex justify-content-end border-top pt-2 mt-2">
                                     <button class="btn btn-sm btn-light text-primary rounded-pill px-3 fw-bold" 
                                             @onclick:stopPropagation="true"
                                             @onclick="@(() => ViewModel.ViewDetailsCommand.Execute(item))">
                                        View Details <i class="fas fa-chevron-right ms-1"></i>
                                     </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
        <!-- Floating Action Button -->
        <div class="position-fixed bottom-0 end-0 p-4 z-3">
             <button class="btn btn-primary rounded-circle shadow-lg d-flex align-items-center justify-content-center" 
                    style="width: 60px; height: 60px;"
                    @onclick="@(() => ViewModel.OpenNewRequestModalCommand.Execute(null))">
                <i class="fas fa-plus fa-lg"></i>
            </button>
        </div>

        <!-- New Request Modal -->
        @if (ViewModel.IsNewRequestModalVisible)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content rounded-4 border-0">
                        <div class="modal-header border-bottom-0 pb-0">
                            <h5 class="modal-title fw-bold">New Request</h5>
                            <button type="button" class="btn-close" @onclick="@(() => ViewModel.CloseNewRequestModalCommand.Execute(null))"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row g-3">
                                @foreach (var type in ViewModel.AvailableRequestTypes)
                                {
                                    <div class="col-6">
                                        <div class="card h-100 border-0 shadow-sm bg-light-subtle hover-lift cursor-pointer text-center py-3"
                                             @onclick="@(() => ViewModel.NavigateToRequestCommand.Execute(type))">
                                            <div class="text-primary mb-2">
                                                <i class="@type.Icon fa-2x"></i>
                                            </div>
                                            <span class="small fw-bold text-dark">@type.Title</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Filter Modal -->
         @if (ViewModel.IsFilterModalVisible)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-bottom-sheet"> <!-- Using bottom sheet style if available, else standard dialog -->
                    <div class="modal-content rounded-top-4 border-0">
                        <div class="modal-header border-bottom-0">
                            <h5 class="modal-title fw-bold">Filter Requests</h5>
                            <button type="button" class="btn-close" @onclick="@(() => ViewModel.CloseFilterModalCommand.Execute(null))"></button>
                        </div>
                        <div class="modal-body">
                            <div class="d-flex flex-column gap-2">
                                @foreach (var filter in ViewModel.FilterTypes)
                                {
                                    <div class="form-check custom-checkbox">
                                        <input class="form-check-input" type="checkbox" id="filter-@filter.Value" 
                                               @bind="filter.IsSelected">
                                        <label class="form-check-label w-100" for="filter-@filter.Value">
                                            @filter.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="modal-footer border-top-0">
                             <button class="btn btn-primary w-100 rounded-pill py-2 fw-bold" 
                                    @onclick="@(() => ViewModel.ApplyFilterCommand.Execute(null))">
                                Apply Filter
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.InitializeAsync();
    }

    private string GetStatusColor(string status)
    {
        return status?.ToLower() switch
        {
            "approved" => "bg-success-subtle text-success",
            "pending" => "bg-warning-subtle text-warning-emphasis",
            "rejected" => "bg-danger-subtle text-danger",
            "cancelled" => "bg-secondary-subtle text-secondary",
            _ => "bg-light text-dark"
        };
    }
}
