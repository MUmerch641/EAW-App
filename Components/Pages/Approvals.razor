@page "/approvals"
@inject AuthenticationStateService AuthState
@inject IApprovalDataService ApprovalService
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime

<div class="page-container">
    <div class="page-header">
        <button class="btn-back" @onclick="GoBack">
            <span class="oi oi-arrow-left"></span>
        </button>
        <h1>My Approvals</h1>
        <div class="header-actions">
            <button class="btn-icon" @onclick="RefreshApprovals" disabled="@isLoading">
                <span class="oi oi-reload"></span>
            </button>
        </div>
    </div>

    <div class="page-content">
        @if (isLoading)
        {
            <div class="loading-container">
                <div class="spinner"></div>
                <p>Loading approvals...</p>
            </div>
        }
        else
        {
            <!-- Filter Tabs -->
            <div class="filter-tabs">
                <button class="tab-button @(activeTab == "pending" ? "active" : "")"
                        @onclick="@(() => SetActiveTab("pending"))">
                    Pending (@pendingCount)
                </button>
                <button class="tab-button @(activeTab == "all" ? "active" : "")"
                        @onclick="@(() => SetActiveTab("all"))">
                    All Approvals (@totalCount)
                </button>
            </div>

            <!-- Approvals List -->
            <div class="approvals-container">
                @if (filteredApprovals != null && filteredApprovals.Any())
                {
                    @foreach (var approval in filteredApprovals)
                    {
                        <div class="approval-card">
                            <div class="approval-header">
                                <div class="request-info">
                                    <h3>@approval.RequestType</h3>
                                    <p class="requester">@approval.RequesterName</p>
                                </div>
                                <div class="status-badge status-@approval.Status?.ToLower()">
                                    @approval.Status
                                </div>
                            </div>

                            <div class="approval-details">
                                <div class="detail-row">
                                    <span class="label">Request Date:</span>
                                    <span class="value">@approval.RequestDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="detail-row">
                                    <span class="label">Period:</span>
                                    <span class="value">
                                        @if (approval.StartDate.HasValue && approval.EndDate.HasValue)
                                        {
                                            if (approval.StartDate.Value.Date == approval.EndDate.Value.Date)
                                            {
                                                @approval.StartDate.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                @($"{approval.StartDate.Value:MMM dd} - {approval.EndDate.Value:MMM dd, yyyy}")
                                            }
                                        }
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(approval.Reason))
                                {
                                    <div class="detail-row">
                                        <span class="label">Reason:</span>
                                        <span class="value reason">@approval.Reason</span>
                                    </div>
                                }
                            </div>

                            @if (approval.Status?.ToLower() == "pending")
                            {
                                <div class="approval-actions">
                                    <button class="btn btn-approve" @onclick="() => ShowApprovalDialog(approval, true)" 
                                            disabled="@isSubmitting">
                                        <span class="oi oi-check"></span>
                                        Approve
                                    </button>
                                    <button class="btn btn-disapprove" @onclick="() => ShowApprovalDialog(approval, false)" 
                                            disabled="@isSubmitting">
                                        <span class="oi oi-x"></span>
                                        Disapprove
                                    </button>
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(approval.ApproverComments))
                            {
                                <div class="approval-comments">
                                    <span class="label">Comments:</span>
                                    <span class="value">@approval.ApproverComments</span>
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="no-approvals">
                        <span class="oi oi-info"></span>
                        <h3>No @(activeTab == "pending" ? "pending" : "") approvals</h3>
                        <p>@(activeTab == "pending" ? "You have no pending approvals at this time." : "No approval records found.")</p>
                    </div>
                }
            </div>
        }

        <!-- Error Messages -->
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
            </div>
        }

        <!-- Success Messages -->
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success">
                @successMessage
            </div>
        }
    </div>
</div>

<!-- Approval Dialog -->
@if (showApprovalDialog)
{
    <div class="modal-overlay" @onclick="CloseApprovalDialog">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>@(isApproving ? "Approve" : "Disapprove") Request</h3>
                <button class="btn-close" @onclick="CloseApprovalDialog">
                    <span class="oi oi-x"></span>
                </button>
            </div>
            
            <div class="modal-body">
                @if (selectedApproval != null)
                {
                    <div class="request-summary">
                        <p><strong>@selectedApproval.RequestType</strong> by @selectedApproval.RequesterName</p>
                        <p>@selectedApproval.StartDate?.ToString("MMM dd, yyyy") - @selectedApproval.EndDate?.ToString("MMM dd, yyyy")</p>
                    </div>
                }
                
                <div class="form-group">
                    <label for="comments">Comments @(isApproving ? "(Optional)" : "*")</label>
                    <textarea id="comments" class="form-control" rows="3" 
                              @bind="approvalComments" 
                              placeholder="@(isApproving ? "Add any comments..." : "Please provide reason for disapproval")"></textarea>
                </div>
            </div>
            
            <div class="modal-actions">
                <button class="btn btn-secondary" @onclick="CloseApprovalDialog" disabled="@isSubmitting">
                    Cancel
                </button>
                <button class="btn @(isApproving ? "btn-approve" : "btn-disapprove")" 
                        @onclick="ProcessApproval" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                        <span> Processing...</span>
                    }
                    else
                    {
                        <span>@(isApproving ? "Approve" : "Disapprove")</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

