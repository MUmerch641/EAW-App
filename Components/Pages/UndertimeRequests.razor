@page "/undertime"
@using MauiHybridApp.ViewModels
@inject UndertimeRequestViewModel ViewModel
@inject NavigationManager Navigation

<div class="page-container">
    <div class="page-header">
        <h1>Undertime Requests</h1>
    </div>

    @if (ViewModel.IsBusy)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading requests...</p>
        </div>
    }
    else if (ViewModel.UndertimeRequests != null && ViewModel.UndertimeRequests.Any())
    {
        <div class="request-list">
            @foreach (var item in ViewModel.UndertimeRequests)
            {
                <div class="request-card">
                    <div class="request-info">
                        <span class="request-title">@item.RequestNo</span>
                        <span class="request-date">@item.UndertimeDateDisplay</span>
                    </div>
                    <div class="request-status">
                        <span class="hours-badge">@item.UTHrsDisplay</span>
                        <span class="status-badge">@item.Status</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>No undertime requests found.</p>
        </div>
    }

    <div class="fab-container">
        <button class="fab" @onclick="@(() => ViewModel.CreateNewCommand.Execute(null))">
            <i class="fas fa-plus"></i>
        </button>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        ViewModel.PropertyChanged += OnViewModelPropertyChanged;
        await ViewModel.InitializeAsync();
    }

    private void OnViewModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        if (ViewModel != null)
        {
            ViewModel.PropertyChanged -= OnViewModelPropertyChanged;
        }
    }
}
