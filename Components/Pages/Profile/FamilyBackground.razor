@page "/profile/family-background"
@using MauiHybridApp.ViewModels
@inject FamilyBackgroundViewModel ViewModel
@inject NavigationManager Navigation

<div class="page-container">
    <div class="page-header">
        <button class="btn-icon" @onclick="GoBack">
            <i class="fas fa-arrow-left"></i>
        </button>
        <h1>Family Background</h1>
        <div style="width: 24px;"></div> <!-- Spacer -->
    </div>

    @if (ViewModel.IsBusy)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading family info...</p>
        </div>
    }
    else
    {
        <div class="form-content">
            <div class="section-title">Spouse</div>
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" placeholder="Spouse Name" />
            </div>
            <div class="form-group">
                <label>Occupation</label>
                <input type="text" class="form-control" placeholder="Occupation" />
            </div>

            <div class="section-title">Children</div>
            <div class="empty-list-message">
                No children records found.
            </div>

            <div class="section-title">Parents</div>
            <div class="form-group">
                <label>Father's Name</label>
                <input type="text" class="form-control" placeholder="Father's Name" />
            </div>
            <div class="form-group">
                <label>Mother's Maiden Name</label>
                <input type="text" class="form-control" placeholder="Mother's Name" />
            </div>
        </div>
    }
</div>



@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.InitializeAsync();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/profile");
    }
}
