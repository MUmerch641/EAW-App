@page "/profile/personal-details"
@using MauiHybridApp.ViewModels
@inject PersonalDetailsViewModel ViewModel
@inject NavigationManager Navigation

<div class="page-container">
    <div class="page-header">
        <button class="btn-icon" @onclick="GoBack">
            <i class="fas fa-arrow-left"></i>
        </button>
        <h1>Personal Details</h1>
        <button class="btn-icon" @onclick="@(() => ViewModel.SaveCommand.Execute(null))">
            <i class="fas fa-save"></i>
        </button>
    </div>

    @if (ViewModel.IsBusy)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading details...</p>
        </div>
    }
    else if (ViewModel.UserProfile != null)
    {
        <div class="form-content">
            @if (!string.IsNullOrEmpty(ViewModel.SuccessMessage))
            {
                <div class="alert success">
                    <i class="fas fa-check-circle"></i> @ViewModel.SuccessMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
            {
                <div class="alert error">
                    <i class="fas fa-exclamation-circle"></i> @ViewModel.ErrorMessage
                </div>
            }

            <div class="form-group">
                <label>Employee ID</label>
                <input type="text" class="form-control" value="@ViewModel.UserProfile.EmployeeId" readonly />
            </div>

            <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" value="@ViewModel.UserProfile.FullName" readonly />
            </div>

            <div class="form-group">
                <label>Date of Birth</label>
                <input type="date" class="form-control" @bind="ViewModel.UserProfile.DateOfBirth" />
            </div>

            <div class="form-group">
                <label>Gender</label>
                <select class="form-control">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="form-group">
                <label>Civil Status</label>
                <select class="form-control">
                    <option>Single</option>
                    <option>Married</option>
                    <option>Widowed</option>
                </select>
            </div>
            
            <div class="form-group">
                <label>Nationality</label>
                <input type="text" class="form-control" placeholder="Filipino" />
            </div>
        </div>
    }
</div>



@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.InitializeAsync();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/profile");
    }
}
