@page "/profile/tax-info"
@using MauiHybridApp.ViewModels
@inject TaxGovernmentRelatedInfoViewModel ViewModel
@inject NavigationManager Navigation

<div class="page-container">
    <div class="page-header">
        <button class="btn-icon" @onclick="GoBack">
            <i class="fas fa-arrow-left"></i>
        </button>
        <h1>Tax & Government Info</h1>
        <div style="width: 24px;"></div>
    </div>

    @if (ViewModel.IsBusy)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading tax info...</p>
        </div>
    }
    else if (ViewModel.UserProfile != null)
    {
        <div class="form-content">
            <div class="form-group">
                <label>Tax Identification Number (TIN)</label>
                <input type="text" class="form-control" placeholder="000-000-000" readonly />
            </div>

            <div class="form-group">
                <label>SSS Number</label>
                <input type="text" class="form-control" placeholder="00-0000000-0" readonly />
            </div>

            <div class="form-group">
                <label>PhilHealth Number</label>
                <input type="text" class="form-control" placeholder="00-000000000-0" readonly />
            </div>
            
            <div class="form-group">
                <label>Pag-IBIG / HDMF Number</label>
                <input type="text" class="form-control" placeholder="0000-0000-0000" readonly />
            </div>
        </div>
    }
</div>



@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.InitializeAsync();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/profile");
    }
}
