@page "/forgot-password"
@inject IAuthenticationDataService AuthService
@inject NavigationManager NavManager
@using MauiHybridApp.Services.Data

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="images/logo.png" alt="Everything at Work" class="logo" />
            <h1>Forgot Password</h1>
            <p>Enter your email address to reset your password</p>
        </div>

        @if (!isSubmitted)
        {
            <EditForm Model="@forgotPasswordModel" OnValidSubmit="@HandleForgotPassword">
                <DataAnnotationsValidator />
                
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <InputText id="email" type="email" class="form-control" @bind-Value="forgotPasswordModel.Email" placeholder="Enter your email address" />
                    <ValidationMessage For="@(() => forgotPasswordModel.Email)" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                <button type="submit" class="btn btn-primary btn-block" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span> Sending...</span>
                    }
                    else
                    {
                        <span>Send Reset Link</span>
                    }
                </button>
            </EditForm>
        }
        else
        {
            <div class="success-message">
                <div class="success-icon">
                    <span class="oi oi-check"></span>
                </div>
                <h3>Email Sent!</h3>
                <p>If an account with that email exists, we've sent you a password reset link.</p>
                <p>Please check your email and follow the instructions to reset your password.</p>
            </div>
        }

        <div class="login-footer">
            <a href="/login">Back to Login</a>
            <span class="separator">|</span>
            <a href="/register">Create Account</a>
        </div>
    </div>
</div>

