@code {
    private ForgotPasswordModel forgotPasswordModel = new();
    private bool isLoading = false;
    private bool isSubmitted = false;
    private string errorMessage = string.Empty;

    private async Task HandleForgotPassword()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            // Validate input
            if (string.IsNullOrWhiteSpace(forgotPasswordModel.Email))
            {
                errorMessage = "Please enter your email address.";
                return;
            }

            // Create forgot password request
            var request = new ForgotPasswordRequest
            {
                Email = forgotPasswordModel.Email
            };

            // Send forgot password request
            var result = await AuthService.ForgotPasswordAsync(request);

            if (result.Success)
            {
                isSubmitted = true;
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Failed to send reset email. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Network error. Please check your connection and try again.";
            System.Diagnostics.Debug.WriteLine($"Forgot password error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private class ForgotPasswordModel
    {
        public string Email { get; set; } = string.Empty;
    }
}
