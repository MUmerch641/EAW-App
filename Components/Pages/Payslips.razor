@page "/payslips"
@using System.ComponentModel
@using MauiHybridApp.ViewModels
@inject PayslipsViewModel ViewModel
@implements IDisposable

<div class="page-container">
    <PageHeader 
        Title="My Payslips" 
        Subtitle="View your payment history" 
        IconClass="fa-file-invoice-dollar" />
    
    <!-- Animated Content Wrapper -->
    <div class="animate-fade-in-up">
        @if (ViewModel.IsBusy)
        {
             <div class="p-4">
                <SkeletonLoader height="80px" width="100%" class="mb-3" />
                <SkeletonLoader height="80px" width="100%" class="mb-3" />
                <SkeletonLoader height="80px" width="100%" />
            </div>
        }
        else if (ViewModel.ShowEmptyState)
        {
            <EmptyState 
                Message="No payslips found" 
                IconClass="fa-file-invoice" />
        }
        else
        {
            <div class="content-section">
                <!-- Detailed Cards -->
                <div class="d-flex flex-column gap-3">
                    @foreach (var payslip in ViewModel.Payslips)
                    {
                        <div class="card p-3 shadow-sm border-0 border-radius-lg cursor-pointer hover-lift" 
                             @onclick="() => ViewModel.ViewDetailCommand.Execute(payslip)">
                             <div class="d-flex justify-content-between align-items-center">
                                 <div class="d-flex align-items-center gap-3">
                                     <div class="icon-circle bg-light text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                         <i class="fas fa-money-bill-wave fs-5"></i>
                                     </div>
                                     <div>
                                         <h6 class="mb-0 fw-bold text-dark">@payslip.PayrollType</h6>
                                         <small class="text-muted">@payslip.IssuedDate.ToString("MMM dd, yyyy")</small>
                                     </div>
                                 </div>
                                 <div class="text-end">
                                     <h6 class="mb-0 fw-bold text-primary">â‚±@payslip.NetPay.ToString("N2")</h6>
                                     <small class="text-primary d-flex align-items-center justify-content-end gap-1">
                                         View <i class="fas fa-chevron-right" style="font-size: 0.7rem;"></i>
                                     </small>
                                 </div>
                             </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>



@code {
    private PropertyChangedEventHandler? _propertyChangedHandler;

    protected override async Task OnInitializedAsync()
    {
        _propertyChangedHandler = (sender, e) => _ = InvokeAsync(StateHasChanged);
        ViewModel.PropertyChanged += _propertyChangedHandler;

        await ViewModel.InitializeAsync();
    }

    public void Dispose()
    {
        if (_propertyChangedHandler != null)
        {
            ViewModel.PropertyChanged -= _propertyChangedHandler;
            _propertyChangedHandler = null;
        }
        // dispose the ViewModel to cleanup any resources/subscriptions
        ViewModel.Dispose();
    }
}
