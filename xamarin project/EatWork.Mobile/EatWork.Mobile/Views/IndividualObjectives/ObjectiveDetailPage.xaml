<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EatWork.Mobile.Views.IndividualObjectives.ObjectiveDetailPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
             xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
             xmlns:control="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
             xmlns:effect="clr-namespace:EatWork.Mobile.Utils.Effects"
             xmlns:effects="clr-namespace:Syncfusion.XForms.EffectsView;assembly=Syncfusion.Core.XForms"
             xmlns:expander="clr-namespace:Syncfusion.XForms.Expander;assembly=Syncfusion.Expander.XForms"
             xmlns:gradient="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
             xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
             xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             xmlns:template="clr-namespace:EatWork.Mobile.Views.Template"
             xmlns:utils="clr-namespace:EatWork.Mobile.Utils"
             Style="{DynamicResource ContentPageNoiOSSafeArea}">

    <ContentPage.Behaviors>
        <utils:EventToCommandBehavior Command="{Binding PageAppearingCommand}"
                                      EventName="Appearing" />
        <utils:EventToCommandBehavior Command="{Binding PageDisappearingCommand}"
                                      EventName="Disappearing" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <ResourceDictionary>
            <utils:CustomConverter x:Key="EventArgs" />
            <utils:TextToBoolConverter x:Key="TextToBoolConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Requests/Styles.xaml" />
                <ResourceDictionary Source="../Template/Styles.xaml" />
                <ResourceDictionary Source="../Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Style="{StaticResource TitleViewContent}">
        <gradient:SfGradientView Grid.Row="0"
                                 Style="{DynamicResource NavBarStyle}" />

        <ContentView>
            <ContentView.Effects>
                <effect:SafeAreaPaddingEffect />
            </ContentView.Effects>
            <utils:TitleView Title="Objective"
                             TitleColor="{StaticResource Gray-White}">
                <utils:TitleView.LeadingView>
                    <iconize:IconButton Command="{Binding BackButtonCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        Text="{StaticResource BackButtonIcon}" />
                </utils:TitleView.LeadingView>
            </utils:TitleView>
        </ContentView>

        <StackLayout Grid.Row="2"
                     Spacing="0">

            <AbsoluteLayout HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">

                <busyindicator:SfBusyIndicator x:Name="busyindicator"
                                               IsBusy="{Binding IsBusy}"
                                               Style="{StaticResource BusyIndicatorStyle}" />

                <StackLayout Margin="0,10"
                             Padding="15,0"
                             AbsoluteLayout.LayoutBounds="0,0,1,1"
                             AbsoluteLayout.LayoutFlags="All"
                             IsVisible="{Binding IsBusy, Converter={utils:InverseBoolConverter}}"
                             Spacing="10"
                             VerticalOptions="CenterAndExpand">

                    <ScrollView HorizontalScrollBarVisibility="Never"
                                VerticalScrollBarVisibility="Never">
                        <Grid Padding="0"
                              ColumnSpacing="0"
                              HorizontalOptions="CenterAndExpand"
                              RowSpacing="0"
                              VerticalOptions="CenterAndExpand">

                            <utils:CustomShadowFrame Padding="0,0,0,0"
                                                     HorizontalOptions="FillAndExpand"
                                                     Style="{StaticResource CustomFrameStyle}">
                                <StackLayout Style="{StaticResource StackLayoutRequestForm}">

                                    <!--  GOAL  -->
                                    <Entry IsVisible="False"
                                           Text="{Binding Holder.Goal.Value, Mode=TwoWay}" />

                                    <!--  GOAL  -->
                                    <control:SfTextInputLayout HasError="{Binding Holder.Goal.IsValid, Converter={utils:InverseBoolConverter}}"
                                                               Hint="Goal  "
                                                               Style="{StaticResource inputLayoutStyle}"
                                                               TrailingViewPosition="Outside">

                                        <!--  Text="{Binding Holder.Goal.Value, Mode=TwoWay}"  -->
                                        <Entry IsEnabled="{Binding Holder.IsEnabled}"
                                               IsReadOnly="True"
                                               Style="{DynamicResource TextBoxStyle}"
                                               Text="{Binding Holder.ObjectiveDetail, Mode=TwoWay}" />

                                        <control:SfTextInputLayout.TrailingView>
                                            <iconize:IconLabel Style="{StaticResource IconizeIconStyle}"
                                                               Text="{StaticResource ListIcon}">
                                                <iconize:IconLabel.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding ToggleGoalsListCommand}" />
                                                </iconize:IconLabel.GestureRecognizers>
                                            </iconize:IconLabel>
                                        </control:SfTextInputLayout.TrailingView>
                                    </control:SfTextInputLayout>

                                    <control:SfTextInputLayout HasError="{Binding Holder.GoalDescription.IsValid, Converter={utils:InverseBoolConverter}}"
                                                               IsEnabled="False"
                                                               Style="{StaticResource InputLayoutStyleEditor}"
                                                               TrailingViewPosition="Outside">

                                        <Editor AutoSize="TextChanges"
                                                IsEnabled="{Binding Holder.IsEnabled}"
                                                Style="{DynamicResource BaseEditorStyle}"
                                                Text="{Binding Holder.GoalDescription.Value, Mode=TwoWay}" />
                                    </control:SfTextInputLayout>

                                    <!--  OBJECTIVES  -->
                                    <control:SfTextInputLayout HasError="{Binding Holder.Objectives.IsValid, Converter={utils:InverseBoolConverter}}"
                                                               Hint="Objectives   "
                                                               Style="{StaticResource InputLayoutStyleEditor}"
                                                               TrailingViewPosition="Inside">

                                        <Editor AutoSize="TextChanges"
                                                IsEnabled="{Binding Holder.IsEnabled}"
                                                Style="{DynamicResource BaseEditorStyle}"
                                                Text="{Binding Holder.Objectives.Value, Mode=TwoWay}" />
                                    </control:SfTextInputLayout>

                                    <!--  KPI  -->
                                    <control:SfTextInputLayout EnableFloating="False"
                                                               HasError="{Binding Holder.KPI.IsValid, Converter={utils:InverseBoolConverter}}"
                                                               Hint="KPI  "
                                                               IsVisible="{Binding Holder.ShowKPI}"
                                                               Style="{StaticResource InputLayoutStyleWithIcon}">

                                        <combobox:SfComboBox DataSource="{Binding Holder.KPISource}"
                                                             DisplayMemberPath="DisplayField"
                                                             IsEnabled="{Binding Holder.IsEnabled}"
                                                             SelectedItem="{Binding Holder.KPISelectedItem}"
                                                             SelectedValuePath="DisplayId"
                                                             Style="{StaticResource ComboBoxStyle}">
                                            <combobox:SfComboBox.Behaviors>
                                                <utils:EventToCommandBehavior Command="{Binding KPISelectionChangedCommand}"
                                                                              CommandParameter="{Binding Holder.KPISelectedItem}"
                                                                              EventName="SelectionChanged" />
                                            </combobox:SfComboBox.Behaviors>
                                        </combobox:SfComboBox>

                                        <control:SfTextInputLayout.LeadingView>
                                            <iconize:IconLabel Style="{StaticResource IconizeIconStyle}"
                                                               Text="{StaticResource ChartIcon}" />
                                        </control:SfTextInputLayout.LeadingView>
                                    </control:SfTextInputLayout>

                                    <!--  CUSTOM KPI  -->
                                    <StackLayout IsVisible="{Binding Holder.IsCustomKPI}">
                                        <control:SfTextInputLayout HasError="{Binding Holder.CustomKPI.IsValid, Converter={utils:InverseBoolConverter}}"
                                                                   Hint="Custom KPI  "
                                                                   IsVisible="{Binding Holder.IsCustomKPI}"
                                                                   Style="{StaticResource InputLayoutStyleEditor}">

                                            <Editor IsEnabled="{Binding Holder.IsEnabled}"
                                                    Style="{DynamicResource EditorStyle}"
                                                    Text="{Binding Holder.CustomKPI.Value, Mode=TwoWay}" />
                                        </control:SfTextInputLayout>
                                    </StackLayout>

                                    <!--  MEASURE  -->
                                    <StackLayout IsVisible="{Binding Holder.ShowKPI}">
                                        <control:SfTextInputLayout EnableFloating="False"
                                                                   HasError="{Binding Holder.Measure.IsValid, Converter={utils:InverseBoolConverter}}"
                                                                   Hint="Measure  "
                                                                   IsVisible="{Binding Holder.IsCustomKPI}"
                                                                   Style="{StaticResource InputLayoutStyleWithIcon}">

                                            <combobox:SfComboBox DataSource="{Binding Holder.MeasureSource}"
                                                                 DisplayMemberPath="DisplayText"
                                                                 IsEnabled="{Binding Holder.IsEnabled}"
                                                                 SelectedItem="{Binding Holder.MeasureSelectedItem, Mode=TwoWay}"
                                                                 SelectedValuePath="Id"
                                                                 Style="{StaticResource ComboBoxStyle}" />

                                            <control:SfTextInputLayout.LeadingView>
                                                <iconize:IconLabel Style="{StaticResource IconizeIconStyle}"
                                                                   Text="{StaticResource ScaleIcon}" />
                                            </control:SfTextInputLayout.LeadingView>
                                        </control:SfTextInputLayout>
                                    </StackLayout>

                                    <!--  TARGET  -->
                                    <Grid IsEnabled="{Binding Holder.IsEnabled}"
                                          IsVisible="{Binding Holder.ShowKPI}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Row="0"
                                               Margin="0,0,0,0"
                                               FontFamily="{DynamicResource Medium}"
                                               FontSize="{StaticResource Tiny}"
                                               Text="Target"
                                               TextColor="{DynamicResource Gray-800}" />

                                        <StackLayout Grid.Row="1"
                                                     Grid.Column="0"
                                                     IsEnabled="{Binding Holder.ToggleTargetGoal}">
                                            <control:SfTextInputLayout EnableFloating="False"
                                                                       HasError="{Binding Holder.Target.IsValid, Converter={utils:InverseBoolConverter}}"
                                                                       Hint=" "
                                                                       Style="{StaticResource inputLayoutStyle}">

                                                <Entry IsEnabled="{Binding Holder.IsEnabled}"
                                                       Style="{DynamicResource TextBoxStyle}"
                                                       Text="{Binding Holder.Target.Value, Mode=TwoWay}" />
                                            </control:SfTextInputLayout>
                                        </StackLayout>

                                        <StackLayout Grid.Row="1"
                                                     Grid.Column="1"
                                                     IsEnabled="{Binding Holder.ToggleTargetGoal}">
                                            <control:SfTextInputLayout EnableFloating="False"
                                                                       HasError="{Binding Holder.UnitOfMeasure.IsValid, Converter={utils:InverseBoolConverter}}"
                                                                       Hint="Unit of measure  "
                                                                       IsEnabled="{Binding Holder.ToggleUnitOfMeasure}"
                                                                       Style="{StaticResource inputLayoutStyle}">

                                                <Entry IsEnabled="{Binding Holder.IsEnabled}"
                                                       Style="{DynamicResource TextBoxStyle}"
                                                       Text="{Binding Holder.UnitOfMeasure.Value, Mode=TwoWay}" />
                                            </control:SfTextInputLayout>
                                        </StackLayout>
                                    </Grid>

                                    <!--  BASELINE  -->
                                    <control:SfTextInputLayout HasError="{Binding Holder.Baseline.IsValid, Converter={utils:InverseBoolConverter}}"
                                                               Hint="{Binding Holder.BaseLineHelper.FormLabel}"
                                                               IsVisible="{Binding Holder.BaseLineHelper.HideTag, Converter={utils:InverseBoolConverter}}"
                                                               Style="{StaticResource inputLayoutStyle}"
                                                               TrailingViewPosition="Inside">

                                        <Entry IsEnabled="{Binding Holder.IsEnabled}"
                                               MaxLength="{Binding Holder.BaseLineHelper.MaxFieldLength}"
                                               Style="{DynamicResource TextBoxStyle}"
                                               Text="{Binding Holder.Baseline.Value, Mode=TwoWay}" />
                                    </control:SfTextInputLayout>

                                    <!--  WEIGHT  -->
                                    <StackLayout IsVisible="{Binding Holder.ShowKPI}">
                                        <control:SfTextInputLayout HasError="{Binding Holder.Weight.IsValid, Converter={utils:InverseBoolConverter}}"
                                                                   Hint="Weight  "
                                                                   IsVisible="{Binding ShowWeight}"
                                                                   Style="{StaticResource inputLayoutStyle}"
                                                                   TrailingViewPosition="Outside">

                                            <Entry IsEnabled="{Binding Holder.IsEnabled}"
                                                   Keyboard="Numeric"
                                                   Style="{DynamicResource TextBoxStyle}"
                                                   Text="{Binding Holder.Weight.Value, Mode=TwoWay}" />

                                            <control:SfTextInputLayout.TrailingView>
                                                <iconize:IconLabel FontSize="14"
                                                                   HorizontalOptions="Center"
                                                                   HorizontalTextAlignment="Center"
                                                                   Style="{StaticResource IconizeIconStyle}"
                                                                   Text="fas-percent"
                                                                   VerticalOptions="Center"
                                                                   VerticalTextAlignment="Center" />
                                            </control:SfTextInputLayout.TrailingView>
                                        </control:SfTextInputLayout>
                                    </StackLayout>

                                    <!--  RATING SCALE  -->
                                    <expander:SfExpander Margin="0,10"
                                                         HeaderBackgroundColor="{DynamicResource PrimaryColor}"
                                                         HeaderIconPosition="End"
                                                         IconColor="{DynamicResource Gray-White}"
                                                         IsExpanded="false"
                                                         IsVisible="{Binding Holder.ShowKPI}">
                                        <expander:SfExpander.Header>
                                            <StackLayout Padding="10,12"
                                                         Orientation="Horizontal">

                                                <Label FontFamily="{DynamicResource Bold}"
                                                       FontSize="{StaticResource Smaller}"
                                                       Text="Rating Scale"
                                                       TextColor="{DynamicResource Gray-White}"
                                                       VerticalOptions="Center" />

                                                <iconize:IconImage Margin="10,0,0,0"
                                                                   HeightRequest="22"
                                                                   Icon="{DynamicResource AddIcon}"
                                                                   IconColor="{DynamicResource Gray-White}"
                                                                   IsVisible="{Binding Holder.ToggleAddRateScaleButton}"
                                                                   WidthRequest="22">
                                                    <iconize:IconImage.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding ToggleRateScaleCommand}" />
                                                    </iconize:IconImage.GestureRecognizers>
                                                </iconize:IconImage>
                                            </StackLayout>
                                        </expander:SfExpander.Header>

                                        <expander:SfExpander.Content>
                                            <Grid RowDefinitions="300">
                                                <!--  EMPTY  -->
                                                <StackLayout Margin="0,10"
                                                             IsVisible="{Binding Holder.RateScaleSourceDisplay, Converter={utils:ListToBoolConverter}}">
                                                    <border:SfBorder Padding="0,0,0,0"
                                                                     BorderColor="Transparent"
                                                                     HasShadow="False"
                                                                     HorizontalOptions="Start"
                                                                     WidthRequest="1000">
                                                        <border:SfBorder.Content>
                                                            <Grid>
                                                                <BoxView BackgroundColor="{DynamicResource Error}"
                                                                         Style="{DynamicResource StatusBoxViewStyle}" />

                                                                <Label FontFamily="{DynamicResource SemiBold}"
                                                                       FontSize="13"
                                                                       HorizontalOptions="CenterAndExpand"
                                                                       LineBreakMode="TailTruncation"
                                                                       Text="No rating scale found."
                                                                       TextColor="{DynamicResource Error}"
                                                                       VerticalOptions="Center" />
                                                            </Grid>
                                                        </border:SfBorder.Content>
                                                    </border:SfBorder>
                                                </StackLayout>

                                                <syncfusion:SfListView x:Name="RequestTypesListView"
                                                                       AutoFitMode="Height"
                                                                       IsVisible="{Binding Holder.RateScaleSourceDisplay, Converter={utils:ListToInverseBoolConverter}}"
                                                                       ItemSpacing="0"
                                                                       ItemsSource="{Binding Holder.RateScaleSourceDisplay}"
                                                                       SelectionMode="None"
                                                                       Style="{StaticResource SfListViewStyle}">
                                                    <syncfusion:SfListView.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Grid Grid.Row="0"
                                                                  Margin="0"
                                                                  Padding="10,0"
                                                                  BackgroundColor="{StaticResource Gray-100}"
                                                                  ColumnSpacing="0"
                                                                  HeightRequest="48">

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="{OnIdiom Desktop=0.7*, Tablet=1*, Phone=0.7*}" />
                                                                    <ColumnDefinition Width="{OnIdiom Desktop=0.7*, Tablet=1*, Phone=0.7*}" />
                                                                    <ColumnDefinition Width="{OnIdiom Desktop=0.7*, Tablet=1*, Phone=0.5*}" />
                                                                    <ColumnDefinition Width="{OnIdiom Desktop=5*, Tablet=1*, Phone=*}" />
                                                                </Grid.ColumnDefinitions>

                                                                <Label FontFamily="{DynamicResource SemiBold}"
                                                                       FontSize="12"
                                                                       HorizontalOptions="Start"
                                                                       Text="Min"
                                                                       TextColor="{DynamicResource Gray-800}"
                                                                       VerticalOptions="Center" />

                                                                <Label Grid.Column="1"
                                                                       FontFamily="{DynamicResource SemiBold}"
                                                                       FontSize="12"
                                                                       HorizontalOptions="Start"
                                                                       Text="Max"
                                                                       TextColor="{DynamicResource Gray-800}"
                                                                       VerticalOptions="Center" />

                                                                <Label Grid.Column="2"
                                                                       FontFamily="{DynamicResource SemiBold}"
                                                                       FontSize="12"
                                                                       HorizontalOptions="Start"
                                                                       Text="Score"
                                                                       TextColor="{DynamicResource Gray-800}"
                                                                       VerticalOptions="Center" />

                                                                <Label Grid.Column="3"
                                                                       FontFamily="{DynamicResource SemiBold}"
                                                                       FontSize="12"
                                                                       HorizontalOptions="Start"
                                                                       Text="Criteria"
                                                                       TextColor="{DynamicResource Gray-800}"
                                                                       VerticalOptions="Center" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </syncfusion:SfListView.HeaderTemplate>
                                                    <syncfusion:SfListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackLayout Padding="10,0">
                                                                <effects:SfEffectsView Style="{DynamicResource RippleEffectStyle}"
                                                                                       TouchUpCommand="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewRateScaleCommand}"
                                                                                       TouchUpCommandParameter="{Binding .}">
                                                                    <border:SfBorder BorderColor="Transparent"
                                                                                     BorderWidth="0"
                                                                                     CornerRadius="4">

                                                                        <template:RateScaleItemTemplate />
                                                                    </border:SfBorder>
                                                                </effects:SfEffectsView>
                                                            </StackLayout>

                                                        </DataTemplate>
                                                    </syncfusion:SfListView.ItemTemplate>
                                                </syncfusion:SfListView>
                                            </Grid>
                                        </expander:SfExpander.Content>
                                    </expander:SfExpander>
                                </StackLayout>
                            </utils:CustomShadowFrame>
                        </Grid>
                    </ScrollView>
                    <StackLayout Margin="0,40" />
                </StackLayout>

                <!--  BUTTONS  -->
                <StackLayout x:Name="ScanView"
                             AbsoluteLayout.LayoutBounds="0,1,1,0.14"
                             AbsoluteLayout.LayoutFlags="All"
                             BackgroundColor="{DynamicResource Gray-Bg}"
                             IsVisible="{Binding IsBusy, Converter={utils:InverseBoolConverter}}">

                    <BoxView BackgroundColor="{DynamicResource Gray-300}"
                             HeightRequest="{OnIdiom Default=1,
                                                     Desktop=0}"
                             Style="{StaticResource SeparatorStyle}" />

                    <FlexLayout Margin="10,5"
                                Direction="Row"
                                JustifyContent="SpaceEvenly"
                                VerticalOptions="End">

                        <buttons:SfButton x:Name="btnDelete"
                                          BackgroundColor="{StaticResource Transparent}"
                                          Command="{Binding DeleteItemCommand}"
                                          HorizontalOptions="Start"
                                          IsVisible="{Binding Holder.IsEditable}">
                            <buttons:SfButton.Content>
                                <Grid Margin="0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="54" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <iconize:IconButton BackgroundColor="{DynamicResource Error}"
                                                        Style="{StaticResource BtnRequestStyle}"
                                                        Text="{StaticResource DeleteIcon}" />
                                    <Label Style="{StaticResource FooterButtonLabelStyle}"
                                           Text="Delete" />
                                </Grid>
                            </buttons:SfButton.Content>
                        </buttons:SfButton>

                        <buttons:SfButton x:Name="btnClose"
                                          BackgroundColor="{StaticResource Transparent}"
                                          Command="{Binding CloseCommand}"
                                          HorizontalOptions="Start"
                                          IsVisible="{Binding Holder.IsEditable, Converter={utils:InverseBoolConverter}}">
                            <buttons:SfButton.Content>
                                <Grid Margin="0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="54" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <iconize:IconButton Style="{StaticResource BtnRequestStyle}"
                                                        Text="{StaticResource CloseIcon}" />
                                    <Label Style="{StaticResource FooterButtonLabelStyle}"
                                           Text="Close" />
                                </Grid>
                            </buttons:SfButton.Content>
                        </buttons:SfButton>

                        <buttons:SfButton x:Name="btnSubmit"
                                          BackgroundColor="{StaticResource Transparent}"
                                          Command="{Binding SubmitCommand}"
                                          HorizontalOptions="End"
                                          IsVisible="{Binding Holder.IsEnabled}">
                            <buttons:SfButton.Content>
                                <Grid Margin="0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="54" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <iconize:IconButton Style="{StaticResource BtnRequestStyle}"
                                                        Text="{StaticResource SaveIcon}" />
                                    <Label Style="{StaticResource FooterButtonLabelStyle}"
                                           Text="Save" />
                                </Grid>
                            </buttons:SfButton.Content>
                        </buttons:SfButton>
                    </FlexLayout>
                </StackLayout>
            </AbsoluteLayout>
        </StackLayout>
    </Grid>
</ContentPage>