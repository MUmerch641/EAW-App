<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:converter="clr-namespace:EatWork.Mobile.Utils"
             xmlns:effect="clr-namespace:EatWork.Mobile.Utils.Effects"
             xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
             xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:gradient="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
             xmlns:sys="clr-namespace:System.Collections.Generic;assembly=netstandard"
             mc:Ignorable="d"
             x:Class="EatWork.Mobile.Views.MyProfile.TaxGovernmentRelatedInfoPage"
             Style="{StaticResource ContentPageNoiOSSafeArea}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Style="{StaticResource TitleViewContent}">

        <gradient:SfGradientView Grid.Row="0" Style="{DynamicResource NavBarStyle}"/>
        
        <ContentView>
            <ContentView.Effects>
                <effect:SafeAreaPaddingEffect />
            </ContentView.Effects>
            <converter:TitleView Title="Tax/Govt-related Info" TitleColor="{StaticResource Gray-White}">
                <converter:TitleView.LeadingView>
                    <iconize:IconButton Text="{StaticResource BackButtonIcon}"
                                        Command="{Binding BackButtonCommand}"
                                        Style="{StaticResource IconButtonStyle}" />
                </converter:TitleView.LeadingView>
            </converter:TitleView>
        </ContentView>

        <StackLayout Grid.Row="2" Spacing="0">
            <ScrollView HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never">
                <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <busyindicator:SfBusyIndicator x:Name="busyindicator"
                                                   Style="{StaticResource BusyIndicatorStyle}"
                                                   IsBusy="{Binding IsBusy}"
                                                   AbsoluteLayout.LayoutBounds="0.5,0.2,-1,-1" />
                    <StackLayout Padding="0,0,0,0" BackgroundColor="{StaticResource Gray-100}" Spacing="0"
                                 AbsoluteLayout.LayoutFlags="All"
                                 AbsoluteLayout.LayoutBounds="0,0,1,1"
                                 IsVisible="{Binding IsBusy, Converter={converter:InverseBoolConverter}}">
                        <Grid Style="{StaticResource GridContentHeaderStyle}">

                            <Label Grid.Column="0"
                                   FontFamily="{DynamicResource SemiBold}"
                                   FontSize="16"
                                   LineHeight="{OnPlatform Android=1.25, Default=-1}"
                                   Style="{StaticResource PriceLabelStyle}"
                                   Text="Government Numbers"
                                   TextColor="{DynamicResource Gray-900}" />

                            <BoxView Grid.Row="1" HeightRequest="1" Style="{StaticResource SeparatorStyle}" />
                        </Grid>

                        <StackLayout BackgroundColor="{DynamicResource Gray-White}">
                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="TIN:" />

                                <Label Grid.Column="2"
                                       Style="{StaticResource LabelStyleProfile}"
                                       Text="{Binding Profile.TIN}"
                                       Margin="0,10" />
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="SSS:" />

                                <Label Grid.Column="2"
                                       Style="{StaticResource LabelStyleProfile}"
                                       Text="{Binding Profile.SSS}"
                                       Margin="0,10" />
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="PhilHealth:" />

                                <Label Grid.Column="2"
                                       Style="{StaticResource LabelStyleProfile}"
                                       Text="{Binding Profile.PhilHealth}"
                                       Margin="0,10" />
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="Pagibig:" />

                                <Label Grid.Column="2"
                                       Style="{StaticResource LabelStyleProfile}"
                                       Text="{Binding Profile.Pagibig}"
                                       Margin="0,10" />
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />
                        </StackLayout>

                        <BoxView HeightRequest="25" Style="{StaticResource SeparatorStyle}" BackgroundColor="{StaticResource Gray-100}" />

                        <Grid Style="{StaticResource GridContentHeaderStyle}">

                            <Label Grid.Column="0"
                                   FontFamily="{DynamicResource SemiBold}"
                                   FontSize="16"
                                   LineHeight="{OnPlatform Android=1.25, Default=-1}"
                                   Style="{StaticResource PriceLabelStyle}"
                                   Text="Other Details"
                                   TextColor="{DynamicResource Gray-900}" />

                            <BoxView Grid.Row="1" HeightRequest="1" Style="{StaticResource SeparatorStyle}" />
                        </Grid>

                        <StackLayout BackgroundColor="{DynamicResource Gray-White}">

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="Applicable Tax:" />

                                <Label Grid.Column="2"
                                       Style="{StaticResource LabelStyleProfile}"
                                       Text="{Binding Profile.ApplicableTax}"
                                       Margin="0,10" />
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="Tax Exemption Status:" />

                                <Label Grid.Column="2"
                                       Style="{StaticResource LabelStyleProfile}"
                                       Text="{Binding Profile.TaxExemptionStatus}"
                                       Margin="0,10" />
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}"
                                  HeightRequest="80">
                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="Husband waives claim of dependents:" />

                                <StackLayout IsEnabled="False"
                                             Grid.Column="2"
                                             Margin="0,10">
                                    <buttons:SfSegmentedControl Margin="0,10"
                                                                CornerRadius="13"
                                                                BorderThickness="2"
                                                                DisplayMode="Text"
                                                                SegmentHeight="20"
                                                                VisibleSegmentsCount="2"
                                                                SegmentCornerRadius="13"
                                                                FontFamily="{DynamicResource Regular}"
                                                                SelectedIndex="{Binding Profile.WaiveClaimingOfDependents}"
                                                                SelectionTextColor="White"
                                                                Color="White"
                                                                SegmentBackgroundColor="White"
                                                                BorderColor="#929292"
                                                                FontColor="Black">
                                        <sys:List x:TypeArguments="x:String">
                                            <x:String>No</x:String>
                                            <x:String>Yes</x:String>
                                        </sys:List>
                                    </buttons:SfSegmentedControl>
                                </StackLayout>
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="Substituted Filing:" />

                                <StackLayout IsEnabled="False"
                                             Grid.Column="2"
                                             Margin="0,10">
                                    <buttons:SfSegmentedControl Margin="0,10"
                                                                CornerRadius="13"
                                                                BorderThickness="2"
                                                                DisplayMode="Text"
                                                                SegmentHeight="20"
                                                                VisibleSegmentsCount="2"
                                                                SegmentCornerRadius="13"
                                                                FontFamily="{DynamicResource Regular}"
                                                                SelectedIndex="{Binding Profile.SubstitutedFiling}"
                                                                SelectionTextColor="White"
                                                                Color="White"
                                                                SegmentBackgroundColor="White"
                                                                BorderColor="#929292"
                                                                FontColor="Black">
                                        <sys:List x:TypeArguments="x:String">
                                            <x:String>No</x:String>
                                            <x:String>Yes</x:String>
                                        </sys:List>
                                    </buttons:SfSegmentedControl>
                                </StackLayout>
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="Solo Parent:" />

                                <StackLayout IsEnabled="False"
                                             Grid.Column="2"
                                             Margin="0,10">
                                    <buttons:SfSegmentedControl Margin="0,10"
                                                                CornerRadius="13"
                                                                BorderThickness="2"
                                                                DisplayMode="Text"
                                                                SegmentHeight="20"
                                                                VisibleSegmentsCount="2"
                                                                SegmentCornerRadius="13"
                                                                FontFamily="{DynamicResource Regular}"
                                                                SelectedIndex="{Binding Profile.SoloParent}"
                                                                SelectionTextColor="White"
                                                                Color="White"
                                                                SegmentBackgroundColor="White"
                                                                BorderColor="#929292"
                                                                FontColor="Black">
                                        <sys:List x:TypeArguments="x:String">
                                            <x:String>No</x:String>
                                            <x:String>Yes</x:String>
                                        </sys:List>
                                    </buttons:SfSegmentedControl>
                                </StackLayout>
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />

                            <Grid ColumnSpacing="0"
                                  RowSpacing="1"
                                  Margin="0,0"
                                  Style="{StaticResource GridEmployeeProfileDetails}">

                                <Label Grid.Column="0"
                                       Margin="16,0,0,0"
                                       Style="{StaticResource LabelStyleProfileForLabel}"
                                       FontFamily="{DynamicResource Regular}"
                                       Text="ID/Certificate:" />

                                <Label Grid.Column="2"
                                       Style="{StaticResource LabelStyleProfile}"
                                       Text="{Binding Profile.IDCertificate}"
                                       Margin="0,10" />
                            </Grid>

                            <BoxView Style="{StaticResource SeparatorStyle}" />
                        </StackLayout>
                    </StackLayout>
                </AbsoluteLayout>
            </ScrollView>
        </StackLayout>
    </Grid>
</ContentPage>