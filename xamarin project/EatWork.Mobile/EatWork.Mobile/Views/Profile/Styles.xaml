<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="EatWork.Mobile.Views.MyProfile.Styles"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                    xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
                    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">

    <Style x:Key="IconizeLabelStyle"
           TargetType="iconize:IconLabel">
        <Setter Property="Margin" Value="16,8" />
        <Setter Property="TextColor" Value="{DynamicResource Gray-600}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style x:Key="LabelStyleProfile"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
        <Setter Property="FontSize" Value="{StaticResource Small}" />
        <Setter Property="TextColor" Value="{StaticResource Gray-900}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <!--<Setter Property="HorizontalTextAlignment" Value="Start" />-->
        <Setter Property="Margin" Value="10, 10" />
        <Setter Property="BackgroundColor" Value="{StaticResource Transparent}" />
        <!--<Setter Property="LineHeight" Value="{OnPlatform Default=-1, Android=1.5}" />-->
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="MaxLines" Value="3" />
    </Style>

    <Style x:Key="LabelStyleProfileForLabel"
           BasedOn="{StaticResource LabelStyleProfile}"
           TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource Small}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
    </Style>

    <Style x:Key="SeparatorStyle"
           TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray-200}" />
        <Setter Property="ios:VisualElement.IsShadowEnabled" Value="false" />
    </Style>

    <Style x:Key="GridEmployeeProfileDetails"
           TargetType="Grid">
        <Setter Property="ColumnDefinitions">
            <Setter.Value>
                <ColumnDefinitionCollection>
                    <ColumnDefinition Width="38*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="57*" />
                </ColumnDefinitionCollection>
            </Setter.Value>
        </Setter>
        <Setter Property="RowDefinitions">
            <Setter.Value>
                <RowDefinitionCollection>
                    <RowDefinition Height="Auto" />
                </RowDefinitionCollection>
            </Setter.Value>
        </Setter>
        <!--<Setter Property="Padding" Value="0,0,16,0" />-->

        <Setter Property="Padding">
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="iOS"
                    Value="0, 5, 16, 5" />
                <On Platform="Android"
                    Value="0, 0, 16, 0" />
            </OnPlatform>
        </Setter>
        <Setter Property="VerticalOptions" Value="StartAndExpand" />
    </Style>

    <Style x:Key="GridContentHeaderStyle"
           TargetType="Grid">
        <Setter Property="Padding" Value="0,16,16,0" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray-White}" />
        <Setter Property="RowSpacing" Value="16" />

        <Setter Property="ColumnDefinitions">
            <Setter.Value>
                <ColumnDefinitionCollection>
                    <ColumnDefinition />
                </ColumnDefinitionCollection>
            </Setter.Value>
        </Setter>

        <Setter Property="RowDefinitions">
            <Setter.Value>
                <RowDefinitionCollection>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1" />
                </RowDefinitionCollection>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Common style for labels  -->
    <Style x:Key="CommonLabelStyle"
           TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource Gray-700}" />
        <Setter Property="FontFamily" Value="Regular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="PriceLabelStyle"
           BasedOn="{StaticResource CommonLabelStyle}"
           TargetType="Label">
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="Margin" Value="16,0" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="ListItemTextStyle"
           TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Gray-700}" />
        <Setter Property="FontFamily" Value="{DynamicResource SemiBold}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="ListItemDetailTextStyle"
           BasedOn="{StaticResource ListItemTextStyle}"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
    </Style>
</ResourceDictionary>