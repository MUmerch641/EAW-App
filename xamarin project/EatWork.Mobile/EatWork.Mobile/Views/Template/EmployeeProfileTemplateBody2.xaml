<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
             xmlns:control="clr-namespace:EatWork.Mobile.Utils"
             xmlns:utils="clr-namespace:EatWork.Mobile.Utils"
             mc:Ignorable="d"
             x:Class="EatWork.Mobile.Views.Template.EmployeeProfileTemplateBody2"
             BackgroundColor="{StaticResource Gray-100}">

    <StackLayout.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Profile/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </StackLayout.Resources>

    <Grid Margin="0"
          Padding="0"
          ColumnSpacing="0"
          HorizontalOptions="StartAndExpand"
          RowSpacing="0"
          BackgroundColor="{StaticResource Gray-100}"
          IsVisible="{Binding IsBusy, Converter={control:InverseBoolConverter}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{OnIdiom Desktop=1*, Tablet=1*, Phone=10}" />
            <ColumnDefinition Width="{OnIdiom Desktop=3*, Tablet=4*, Phone=*}" />
            <ColumnDefinition Width="{OnIdiom Desktop=1*, Tablet=1*, Phone=10}" />
        </Grid.ColumnDefinitions>

        <control:CustomShadowFrame Grid.Row="0"
                                   Grid.Column="1"
                                   Margin="0,20,0,0"
                                   Padding="0,10,0,10"
                                   BackgroundColor="{StaticResource Gray-White}"
                                   BorderColor="{StaticResource Gray-White}"
                                   BorderWidth="1"
                                   CornerRadius="8"
                                   HasShadow="true"
                                   HorizontalOptions="FillAndExpand"
                                   Radius="4"
                                   ShadowOffSetHeight="4"
                                   ShadowOffsetWidth="0"
                                   ShadowOpacity="0.12">
            <StackLayout Spacing="0">
                <Grid Style="{StaticResource GridContentHeaderStyle}">

                    <Label Grid.Column="0"
                           FontFamily="{DynamicResource SemiBold}"
                           FontSize="16"
                           LineHeight="{OnPlatform Android=1.25, Default=-1}"
                           Style="{StaticResource PriceLabelStyle}"
                           Text="Personal Details"
                           TextColor="{DynamicResource Gray-900}" />

                    <BoxView Grid.Row="1" HeightRequest="1" Style="{StaticResource SeparatorStyle}" />
                </Grid>

                <StackLayout BackgroundColor="{DynamicResource Gray-White}">
                    <Grid ColumnSpacing="0"
                          RowSpacing="1"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Nick Name:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.NickName, Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Age:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.Age,Mode=OneWay}"
                               Margin="0,10"/>
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Birthdate:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.BirthdateString,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Birthplace:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.BirthPlace,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Civil Status:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.CivilStatusString,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Religion:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.ReligionString,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Nationality:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.NationalityString,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>
                </StackLayout>
            </StackLayout>
        </control:CustomShadowFrame>

        <control:CustomShadowFrame Grid.Row="1"
                                   Grid.Column="1"
                                   Margin="0,20,0,0"
                                   Padding="0,10,0,10"
                                   BackgroundColor="{StaticResource Gray-White}"
                                   BorderColor="{StaticResource Gray-White}"
                                   BorderWidth="1"
                                   CornerRadius="8"
                                   HasShadow="true"
                                   HorizontalOptions="FillAndExpand"
                                   Radius="4"
                                   ShadowOffSetHeight="4"
                                   ShadowOffsetWidth="0"
                                   ShadowOpacity="0.12">
            <StackLayout Spacing="0">
                <Grid Style="{StaticResource GridContentHeaderStyle}">

                    <Label Grid.Column="0"
                           FontFamily="{DynamicResource SemiBold}"
                           FontSize="16"
                           LineHeight="{OnPlatform Android=1.25, Default=-1}"
                           Style="{StaticResource PriceLabelStyle}"
                           Text="Contact Details"
                           TextColor="{DynamicResource Gray-900}" />

                    <BoxView Grid.Row="1" HeightRequest="1" Style="{StaticResource SeparatorStyle}" />
                </Grid>

                <StackLayout BackgroundColor="{DynamicResource Gray-White}">
                    <Grid ColumnSpacing="0"
                          RowSpacing="1"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="City Address:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.FullAddress,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Provincial Address:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.FullProvincialAddress,Mode=OneWay}"
                               Margin="0,10"
                               FontSize="Small" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Mobile No.:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.MobileNumber,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Phone No./s:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.PhoneNumber,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>

                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridEmployeeProfileDetails}">

                        <Label Grid.Column="0"
                               Margin="16,0,0,0"
                               Style="{StaticResource LabelStyleProfileForLabel}"
                               FontFamily="{DynamicResource Regular}"
                               Text="Email Address:" />

                        <Label Grid.Column="2"
                               Style="{StaticResource LabelStyleProfile}"
                               Text="{Binding Profile.EmailAddress,Mode=OneWay}"
                               Margin="0,10" />
                    </Grid>
                </StackLayout>
            </StackLayout>
        </control:CustomShadowFrame>

        <control:CustomShadowFrame Grid.Row="2"
                                   Grid.Column="1"
                                   Margin="0,20,0,0"
                                   Padding="0,0,0,0"
                                   BackgroundColor="{StaticResource Gray-White}"
                                   BorderColor="{StaticResource Gray-White}"
                                   BorderWidth="1"
                                   CornerRadius="8"
                                   HasShadow="true"
                                   HorizontalOptions="FillAndExpand"
                                   Radius="4"
                                   ShadowOffSetHeight="4"
                                   ShadowOffsetWidth="0"
                                   ShadowOpacity="0.12">

            <Grid ColumnSpacing="0"
                  RowSpacing="1"
                  Margin="0,0"
                  BackgroundColor="{StaticResource Gray-White}">
                
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ProfileCategoryCommand}" />
                </Grid.GestureRecognizers>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{OnPlatform Android=Auto,iOS=25}" />
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="17*" />
                    <ColumnDefinition Width="73*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>

                <StackLayout HeightRequest="50"
                             WidthRequest="50"
                             Grid.Row="0"
                             Grid.RowSpan="2"
                             Grid.Column="0"
                             Margin="0,0,0,0"
                             VerticalOptions="FillAndExpand"
                             HorizontalOptions="FillAndExpand"
                             BackgroundColor="{DynamicResource PrimaryColor}">
                    <!-- Icon -->
                    <iconize:IconImage Aspect="Fill"
                                       HeightRequest="35"
                                       WidthRequest="35"
                                       Icon="{StaticResource EmployeeInfoIcon}"
                                       VerticalOptions="CenterAndExpand"
                                       HorizontalOptions="CenterAndExpand"
                                       IconColor="{StaticResource Gray-White}" />
                </StackLayout>

                <Label Grid.Column="1"
                       FontFamily="{DynamicResource SemiBold}"
                       LineHeight="{OnPlatform Android=1.25, Default=-1}"
                       Style="{StaticResource PriceLabelStyle}"
                       Margin="16,0"
                       Padding="0,10,0,0"
                       Text="Emloyee Details"
                       TextColor="{StaticResource Gray-900}"
                       HorizontalOptions="Start"
                       FontSize="{StaticResource Small}" />

                <Label Grid.Column="1"
                       Grid.Row="1"
                       Grid.ColumnSpan="2"
                       Margin="16,0"
                       FontFamily="{DynamicResource Regular}"
                       LineHeight="{OnPlatform Android=1.25, Default=-1}"
                       Style="{StaticResource PriceLabelStyle}"
                       Text="View more profile information"
                       Padding="0,0,0,10"
                       TextColor="{StaticResource Gray-900}"
                       HorizontalOptions="Start"
                       FontSize="{StaticResource Small}" />

                <iconize:IconLabel Text="fas-chevron-right"
                                   Grid.Column="2"
                                   FontSize="Medium"
                                   Grid.RowSpan="2"
                                   Padding="0,10"
                                   Style="{StaticResource IconizeLabelStyle}"
                                   HorizontalOptions="End" />
            </Grid>
        </control:CustomShadowFrame>
    </Grid>
</StackLayout>