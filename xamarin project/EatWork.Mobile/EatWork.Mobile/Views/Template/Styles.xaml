<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="EatWork.Mobile.Views.Template.Styles"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:avatar="clr-namespace:Syncfusion.XForms.AvatarView;assembly=Syncfusion.Core.XForms"
                    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
                    xmlns:cards="clr-namespace:Syncfusion.XForms.Cards;assembly=Syncfusion.Cards.XForms"
                    xmlns:circleimg="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
                    xmlns:control="clr-namespace:EatWork.Mobile.Utils"
                    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                    xmlns:gradient="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
                    xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
                    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">
    <!--  APPROVAL HEADER  -->
    <Style x:Key="ShadowFrameStyle"
           TargetType="control:CustomShadowFrame">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray-White}" />
        <!--<Setter Property="BorderColor" Value="{StaticResource Gray-White}" />-->
        <Setter Property="CustomBorderColor" Value="{StaticResource Transparent}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Radius" Value="12" />
        <Setter Property="ShadowOffSetHeight" Value="4" />
        <Setter Property="ShadowOffsetWidth" Value="0" />
        <Setter Property="ShadowOpacity" Value="0.12" />
        <Setter Property="ShadowOpacity" Value="0.12" />
    </Style>

    <Style x:Key="HeaderLabelStyle"
           TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="TextColor" Value="{StaticResource Gray-900}" />
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
        <Setter Property="FontFamily" Value="{DynamicResource SemiBold}" />
        <!--<Setter Property="FontFamily" Value="{StaticResource Calibri}" />-->
    </Style>

    <Style x:Key="ContentLabelStyle"
           TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource Small}" />
        <Setter Property="TextColor" Value="{StaticResource Gray-700}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
        <!--<Setter Property="FontFamily" Value="{StaticResource Calibri}" />-->
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
    </Style>

    <Style x:Key="SfGradientButtonStyle"
           BasedOn="{StaticResource ButtonStyle}"
           TargetType="buttons:SfButton">
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="WidthRequest" Value="1000" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <Style x:Key="SfGradientButtonStyle2"
           BasedOn="{StaticResource SfGradientButtonStyle}"
           TargetType="buttons:SfButton">
        <!--<Setter Property="WidthRequest" Value="245" />-->
        <Setter Property="WidthRequest" Value="150" />
    </Style>

    <!--  PROFILE  -->
    <Style x:Key="CommonProfileIconLabelStyle"
           TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Gray-600}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
    </Style>

    <Style x:Key="CommonProfileLabelStyle"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Gray-900}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="LineHeight" Value="{OnPlatform Default=1.5, iOS=-1}" />
    </Style>

    <Style x:Key="IconizeCommonProfileIconLabelStyle"
           TargetType="iconize:IconLabel">
        <Setter Property="TextColor" Value="{StaticResource Gray-600}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
    </Style>

    <Style x:Key="ProfileImage"
           TargetType="Image">
        <Setter Property="HeightRequest" Value="150" />
        <Setter Property="WidthRequest" Value="150" />
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="Margin" Value="0,-80,0,5" />
    </Style>

    <Style x:Key="profileImageStyle"
           TargetType="circleimg:CircleImage">
        <!--<Setter Property="Source" Value="profile.png" />-->
        <Setter Property="BorderColor" Value="White" />
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="Aspect" Value="AspectFill" />
        <Setter Property="WidthRequest" Value="110" />
        <Setter Property="HeightRequest" Value="110" />
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="Margin" Value="0,-80,0,5" />
    </Style>

    <Style x:Key="AvatarProfileImageStyle"
           TargetType="avatar:SfAvatarView">
        <!--<Setter Property="Source" Value="profile.png" />-->
        <Setter Property="WidthRequest" Value="110" />
        <Setter Property="HeightRequest" Value="110" />
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="Margin" Value="0,0,0,5" />
        <Setter Property="CornerRadius" Value="100" />
        <Setter Property="AvatarCharacter" Value="Avatar17" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray-200}" />
        <Setter Property="BorderColor" Value="{StaticResource Gray-White}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="HasShadow" Value="true" />
    </Style>

    <!--  REQUEST FOOTER BUTTON  -->
    <Style x:Key="btnLoginStyle"
           TargetType="buttons:SfButton">
        <Setter Property="FontSize" Value="Medium" />
        <Setter Property="TextColor" Value="{StaticResource Gray-White}" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <!--<Setter Property="CornerRadius" Value="25" />-->
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="WidthRequest" Value="1000" />
        <!--<Setter Property="WidthRequest" Value="200" />-->
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
    </Style>

    <Style x:Key="SeparatorStyle"
           TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray-200}" />
        <Setter Property="ios:VisualElement.IsShadowEnabled" Value="false" />
    </Style>

    <Style x:Key="BtnRequestStyle"
           TargetType="iconize:IconButton">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="CornerRadius" Value="27" />
        <Setter Property="WidthRequest" Value="54" />
        <Setter Property="HeightRequest" Value="54" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryButtonColor}" />
        <!--<Setter Property="BackgroundColor">
            <Setter.Value>
                <gradient:SfGradientView>
                    <gradient:SfGradientView.BackgroundBrush>
                        <gradient:SfLinearGradientBrush>
                            <gradient:SfLinearGradientBrush.GradientStops>
                                <gradient:SfGradientStop Color="{StaticResource PrimaryColor}" Offset="0.0" />
                                <gradient:SfGradientStop Color="{StaticResource PrimaryGradient}" Offset="1.0" />
                            </gradient:SfLinearGradientBrush.GradientStops>
                        </gradient:SfLinearGradientBrush>
                    </gradient:SfGradientView.BackgroundBrush>
                </gradient:SfGradientView>
            </Setter.Value>
        </Setter>-->
        <Setter Property="TextColor" Value="{StaticResource Gray-700}" />
        <!--<Setter Property="VerticalTextAlignment" Value="Center" />-->
        <!--<Setter Property="HorizontalTextAlignment" Value="Center" />-->
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
        <Setter Property="TextColor" Value="{StaticResource Gray-White}" />
    </Style>

    <Style x:Key="FooterButtonLabelStyle"
           TargetType="Label">
        <Setter Property="Grid.Row" Value="1" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
        <Setter Property="TextColor" Value="{StaticResource Gray-800}" />
        <Setter Property="FontSize" Value="{StaticResource Tiny}" />
    </Style>

    <Style x:Key="IconImageApproval"
           TargetType="iconize:IconImage">
        <Setter Property="IconColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="HeightRequest" Value="17" />
        <Setter Property="WidthRequest" Value="17" />
    </Style>

    <Style x:Key="CardsFileAttachment"
           TargetType="cards:SfCardView">
        <Setter Property="HeightRequest" Value="30" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>
</ResourceDictionary>