<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="EatWork.Mobile.Views.Styles"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
                    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                    xmlns:graphics="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
                    xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
                    xmlns:inputLayout="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
                    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">

    <!--  DARK TO TRANSPARENT  -->
    <Color x:Key="GradientStartColor">#162140</Color>
    <Color x:Key="GradientMidColor">#8DA0D9</Color>
    <Color x:Key="GradientEndColor">#182848</Color>

    <Color x:Key="GradientStartColor2">#000046</Color>
    <Color x:Key="GradientMidColor2">#000046</Color>
    <Color x:Key="GradientEndColor2">#1CB5E0</Color>

    <Color x:Key="GradientStartColor3">#061161</Color>
    <Color x:Key="GradientMidColor3">#061161</Color>
    <Color x:Key="GradientEndColor3">#780206</Color>
    <Color x:Key="Pink">#EE3F60</Color>

    <Style x:Key="btnLoginStyle"
           TargetType="buttons:SfButton">
        <Setter Property="FontSize" Value="{StaticResource Small}" />
        <Setter Property="TextColor" Value="{StaticResource Gray-White}" />
        <Setter Property="VerticalOptions" Value="Start" />
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
    </Style>

    <Style x:Key="lblForgetSignupStyle"
           TargetType="Label">
        <Setter Property="TextDecorations" Value="Underline" />
        <Setter Property="TextColor" Value="{DynamicResource LoginTextColor}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
        <Setter Property="LineHeight" Value="1.25" />
    </Style>

    <Style x:Key="inputLayoutStyleLogin"
           TargetType="inputLayout:SfTextInputLayout">
        <Setter Property="ContainerType" Value="Outlined" />
        <Setter Property="OutlineCornerRadius" Value="8" />
        <Setter Property="ReserveSpaceForAssistiveLabels" Value="False" />
        <Setter Property="ContainerBackgroundColor" Value="{StaticResource White-Smoke}" />
        <Setter Property="LeadingViewPosition" Value="Inside" />
        <Setter Property="ErrorColor" Value="{StaticResource Error}" />
        <Setter Property="InputViewPadding" Value="{OnPlatform Android='0', iOS='0,5', UWP='0,5'}" />
    </Style>

    <Style x:Key="SfGradientViewStyle"
           TargetType="graphics:SfGradientView">
        <Setter Property="Opacity" Value="0.82" />
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="BackgroundBrush">
            <Setter.Value>
                <graphics:SfLinearGradientBrush StartPoint="0,0"
                                                EndPoint="1,1">
                    <graphics:SfLinearGradientBrush.GradientStops>
                        <graphics:SfGradientStop Offset="0.0"
                                                 Color="{DynamicResource LoginGradientStart}" />
                        <graphics:SfGradientStop Offset="1.0"
                                                 Color="{DynamicResource LoginGradientEnd}" />
                    </graphics:SfLinearGradientBrush.GradientStops>
                </graphics:SfLinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SfGradientViewStyle2"
           TargetType="graphics:SfGradientView">
        <Setter Property="Opacity" Value="0.82" />
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="BackgroundBrush">
            <Setter.Value>
                <graphics:SfLinearGradientBrush StartPoint="0,0"
                                                EndPoint="1,1">
                    <graphics:SfLinearGradientBrush.GradientStops>
                        <graphics:SfGradientStop Offset="0.0"
                                                 Color="{DynamicResource LoginGradientStart}" />
                        <graphics:SfGradientStop Offset="1.0"
                                                 Color="{DynamicResource LoginGradientEnd}" />
                    </graphics:SfLinearGradientBrush.GradientStops>
                </graphics:SfLinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LabelStyle"
           TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Gray-White}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.25" />
    </Style>

    <Style x:Key="SfFlatButtonStyle"
           TargetType="buttons:SfButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Gray-White}" />
        <Setter Property="FontFamily" Value="{DynamicResource SemiBold}" />
        <Setter Property="FontSize" Value="{StaticResource Smaller}" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
    </Style>

    <Style x:Key="ListItemTextStyle"
           TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Gray-800}" />
        <Setter Property="FontFamily" Value="{DynamicResource SemiBold}" />
        <Setter Property="FontSize" Value="{StaticResource Smaller}" />
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="ListItemDetailTextStyle"
           BasedOn="{StaticResource ListItemTextStyle}"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
    </Style>

    <Style x:Key="SeparatorStyle"
           TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray-200}" />
        <Setter Property="ios:VisualElement.IsShadowEnabled" Value="false" />
    </Style>

    <!--  MY PROFILE  -->
    <Style x:Key="IconLabelStyle"
           TargetType="Label">
        <Setter Property="Margin" Value="16,8" />
        <Setter Property="TextColor" Value="{DynamicResource Gray-700}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style x:Key="LabelStyleProfile"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
        <Setter Property="FontSize" Value="Small" />
        <Setter Property="TextColor" Value="{DynamicResource Gray-900}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="16, 12" />
        <Setter Property="BackgroundColor" Value="{StaticResource Transparent}" />
        <Setter Property="LineHeight" Value="{OnPlatform Default=-1, Android=1.5}" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="MaxLines" Value="2" />
    </Style>

    <Style x:Key="IconizeLabelStyle"
           TargetType="iconize:IconLabel">
        <Setter Property="Margin" Value="16,8" />
        <Setter Property="TextColor" Value="{DynamicResource Gray-600}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <!--  MY PROFILE  -->
    <Style x:Key="IconizeMenuImage"
           TargetType="iconize:IconImage">
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="WidthRequest">
            <OnIdiom x:TypeArguments="x:Double"
                     Desktop="150"
                     Phone="20"
                     Tablet="80" />
        </Setter>
        <Setter Property="HeightRequest">
            <OnIdiom x:TypeArguments="x:Double"
                     Desktop="150"
                     Phone="20"
                     Tablet="80" />
        </Setter>
    </Style>

    <Style x:Key="MenuMenuName"
           TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="MaxLines" Value="3" />
    </Style>

    <Style x:Key="DashboardLabelStyle"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource SemiBold}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{DynamicResource DashboardSecondaryTextHeader}" />
        <Setter Property="LineHeight" Value="{OnPlatform Default=1.25, iOS=-1}" />
    </Style>

    <Style x:Key="CommonLabelStyle"
           TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource Gray-700}" />
        <Setter Property="FontFamily" Value="Regular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="PriceLabelStyle"
           BasedOn="{StaticResource CommonLabelStyle}"
           TargetType="Label">
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="Margin" Value="16,0" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="WalkthroughButtonStyle"
           BasedOn="{StaticResource ButtonStyle}"
           TargetType="buttons:SfButton">
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalOptions" Value="EndAndExpand" />
        <Setter Property="Margin" Value="0,10,0,24" />
        <Setter Property="WidthRequest" Value="200" />
        <Setter Property="HeightRequest" Value="40" />
        <!--<Setter Property="BackgroundColor" Value="{StaticResource Success}" />-->
    </Style>

    <Style x:Key="WlkErrorButtonStyle"
           BasedOn="{StaticResource ErrorButtonStyle}"
           TargetType="buttons:SfButton">
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalOptions" Value="EndAndExpand" />
        <Setter Property="Margin" Value="0,10,0,24" />
        <Setter Property="WidthRequest" Value="245" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

    <Style x:Key="WlkWarningButtonStyle"
           BasedOn="{StaticResource WarningButtonStyle}"
           TargetType="buttons:SfButton">
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalOptions" Value="EndAndExpand" />
        <Setter Property="Margin" Value="0,10,0,24" />
        <Setter Property="WidthRequest" Value="245" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

    <Style x:Key="WalkthroughLabelStyle"
           TargetType="Label">
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.25, Default=-1}" />
        <Setter Property="TextColor" Value="{DynamicResource Gray-Black}" />
    </Style>

    <Style x:Key="ButtonSuccess"
           TargetType="buttons:SfButton">
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
    </Style>

    <Style x:Key="ButtonPink"
           TargetType="buttons:SfButton">
        <Setter Property="BackgroundColor" Value="{StaticResource Pink}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="FontFamily" Value="{DynamicResource Regular}" />
    </Style>

    <Style x:Key="DescriptionLabelStyle"
           TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource Gray-900}" />
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="LineHeight" Value="1.25" />
    </Style>

    <Style x:Key="GridMyScheduleDetails"
           TargetType="Grid">
        <Setter Property="ColumnDefinitions">
            <Setter.Value>
                <ColumnDefinitionCollection>
                    <ColumnDefinition Width="*" />
                </ColumnDefinitionCollection>
            </Setter.Value>
        </Setter>

        <Setter Property="RowDefinitions">
            <Setter.Value>
                <RowDefinitionCollection>
                    <RowDefinition Height="Auto" />
                </RowDefinitionCollection>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="0,0,0,0" />
        <Setter Property="VerticalOptions" Value="StartAndExpand" />
        <Setter Property="ColumnSpacing" Value="1" />
        <!--<Setter Property="BackgroundColor" Value="{DynamicResource Gray-Bg}" />-->
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <Style x:Key="LabelStyleMySchedule"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource SemiBold}" />
        <Setter Property="FontSize" Value="{StaticResource Smaller}" />
        <Setter Property="TextColor" Value="{StaticResource Gray-900}" />
        <Setter Property="VerticalOptions" Value="StartAndExpand" />
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="Margin" Value="0, 0" />
        <Setter Property="BackgroundColor" Value="{StaticResource Transparent}" />
        <Setter Property="LineBreakMode" Value="NoWrap" />
        <Setter Property="MaxLines" Value="5" />
        <Setter Property="LineHeight" Value="{OnPlatform Default=-1, Android=1.5}" />
    </Style>

    <Style x:Key="LabelStyleMyScheduleForLabel"
           BasedOn="{StaticResource LabelStyleMySchedule}"
           TargetType="Label">
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
    </Style>

    <Style x:Key="GridStylePayslip"
           TargetType="Grid">
        <Setter Property="ColumnDefinitions" Value="50*,50*" />
        <Setter Property="RowDefinitions" Value="Auto" />
        <Setter Property="ColumnSpacing" Value="0" />
        <Setter Property="RowSpacing" Value="1" />
        <Setter Property="Margin" Value="0,0" />
        <Setter Property="Padding" Value="0,0" />
        <Setter Property="VerticalOptions" Value="StartAndExpand" />
    </Style>

    <Style x:Key="TitleLabelStyle"
           TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{DynamicResource Gray-900}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource SemiBold}" />
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
    </Style>

    <Style x:Key="HorizontalSeparatorStyle"
           TargetType="BoxView">
        <Setter Property="Color" Value="{DynamicResource Gray-200}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray-200}" />
    </Style>

    <Style x:Key="SimpleLabelStyle"
           TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource Small}" />
        <Setter Property="TextColor" Value="{DynamicResource Gray-700}" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource Medium}" />
        <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
    </Style>

    <Style x:Key="VerticalSeparatorStyle"
           TargetType="BoxView">
        <Setter Property="WidthRequest" Value="1" />
        <Setter Property="HeightRequest" Value="12" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray-700}" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
</ResourceDictionary>