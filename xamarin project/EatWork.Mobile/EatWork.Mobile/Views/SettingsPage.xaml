<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EatWork.Mobile.Views.SettingsPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:effect="clr-namespace:EatWork.Mobile.Utils.Effects"
             xmlns:gradient="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
             xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
             xmlns:utils="clr-namespace:EatWork.Mobile.Utils"
             Style="{StaticResource ContentPageNoiOSSafeArea}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <utils:CustomConverter x:Key="EventArgs" />
            <Style x:Key="TitleLabelStyle"
                   TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="{DynamicResource Gray-900}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontFamily" Value="SemiBold" />
                <Setter Property="LineHeight" Value="{OnPlatform Android=1.5, Default=-1}" />
            </Style>

            <Style x:Key="IconLabelStyle"
                   TargetType="iconize:IconLabel">
                <Setter Property="TextColor" Value="{DynamicResource Gray-600}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontFamily" Value="FontIcons" />
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Style="{StaticResource TitleViewContent}">

        <gradient:SfGradientView Grid.Row="0"
                                 Style="{DynamicResource NavBarStyle}" />

        <ContentView>
            <ContentView.Effects>
                <effect:SafeAreaPaddingEffect />
            </ContentView.Effects>
            <utils:TitleView Title="Settings"
                             TitleColor="{StaticResource Gray-White}">
                <utils:TitleView.LeadingView>
                    <iconize:IconButton Command="{Binding MenuButtonCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        Text="{StaticResource HamburgerIcon}" />
                </utils:TitleView.LeadingView>
            </utils:TitleView>
        </ContentView>

        <StackLayout Grid.Row="2"
                     Spacing="0">
            <AbsoluteLayout HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                <busyindicator:SfBusyIndicator x:Name="busyindicator"
                                               IsBusy="{Binding IsBusy}"
                                               Style="{StaticResource BusyIndicatorStyle}" />

                <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                            AbsoluteLayout.LayoutFlags="All"
                            HorizontalOptions="FillAndExpand"
                            HorizontalScrollBarVisibility="Never"
                            IsVisible="{Binding IsBusy, Converter={utils:InverseBoolConverter}}"
                            VerticalOptions="FillAndExpand"
                            VerticalScrollBarVisibility="Never">

                    <StackLayout BackgroundColor="{DynamicResource Gray-100}"
                                 Spacing="0">

                        <!--<Label Margin="16,24,0,16"
                             FontFamily="{DynamicResource SemiBold}"
                             FontSize="12"
                             HorizontalOptions="FillAndExpand"
                             LineHeight="{OnPlatform Default=-1, Android=1.25}"
                             Text="ACCOUNT"
                             TextColor="{DynamicResource Gray-800}"
                             VerticalOptions="Center"
                             VerticalTextAlignment="Center" />-->

                        <!--<utils:TapAnimationGrid BackgroundColor="{DynamicResource Gray-Bg}"
                             ColumnDefinitions="Auto, *, Auto"
                             ColumnSpacing="0"
                             Command="{Binding UpdateConnectionCommand}"
                             RowSpacing="0"
                             Tapped="False">

                             <iconize:IconLabel Grid.Column="0"
                             Margin="16,0,0,0"
                             Style="{DynamicResource IconLabelStyle}"
                             Text="{DynamicResource AccountIcon}" />

                             <Label Grid.Column="1"
                             Margin="16,12"
                             FontFamily="{DynamicResource Medium}"
                             HorizontalOptions="Start"
                             Style="{StaticResource TitleLabelStyle}"
                             Text="Update Connection"
                             VerticalOptions="Center" />

                             <iconize:IconLabel Grid.Column="2"
                             Margin="16,8"
                             Style="{DynamicResource IconLabelStyle}"
                             Text="{DynamicResource ArrowRight}" />
                             </utils:TapAnimationGrid>

                             <BoxView Style="{DynamicResource SeparatorStyle}" />-->

                        <!--<utils:TapAnimationGrid BackgroundColor="{DynamicResource Gray-Bg}"
                             ColumnDefinitions="Auto, *, Auto"
                             ColumnSpacing="0"
                             Command="{Binding UpdateConnectionCommand}"
                             RowSpacing="0"
                             Tapped="False">

                             <iconize:IconLabel Grid.Column="0"
                             Margin="16,0,0,0"
                             Style="{DynamicResource IconLabelStyle}"
                             Text="{DynamicResource LockIcon}" />

                             <Label Grid.Column="1"
                             Margin="16,12"
                             FontFamily="{DynamicResource Medium}"
                             HorizontalOptions="Start"
                             Style="{StaticResource TitleLabelStyle}"
                             Text="Change Password"
                             VerticalOptions="Center" />

                             <iconize:IconLabel Grid.Column="2"
                             Margin="16,8"
                             Style="{DynamicResource IconLabelStyle}"
                             Text="{DynamicResource ArrowRight}" />
                             </utils:TapAnimationGrid>-->

                        <!--  Margin="16,40,0,16"  -->
                        <Label Margin="16,24,0,16"
                               FontFamily="{DynamicResource SemiBold}"
                               FontSize="12"
                               HorizontalOptions="FillAndExpand"
                               LineHeight="{OnPlatform Default=-1,
                                                       Android=1.25}"
                               Text="APPLICATION"
                               TextColor="{DynamicResource Gray-800}"
                               VerticalOptions="Center"
                               VerticalTextAlignment="Center" />

                        <utils:TapAnimationGrid BackgroundColor="{DynamicResource Gray-Bg}"
                                                ColumnDefinitions="Auto, *, Auto"
                                                ColumnSpacing="0"
                                                Command="{Binding GoToProfileCommand}"
                                                RowSpacing="0"
                                                Tapped="False">

                            <iconize:IconLabel Grid.Column="0"
                                               Margin="16,0,0,0"
                                               Style="{DynamicResource IconLabelStyle}"
                                               Text="{DynamicResource AccountIcon}" />

                            <Label Grid.Column="1"
                                   Margin="16,12"
                                   FontFamily="{DynamicResource Small}"
                                   HorizontalOptions="Start"
                                   Style="{StaticResource TitleLabelStyle}"
                                   Text="My Profile"
                                   VerticalOptions="Center" />

                            <!--<iconize:IconLabel Grid.Column="2"
                                 Margin="16,8"
                                 Style="{DynamicResource IconLabelStyle}"
                                 Text="{DynamicResource ArrowRight}" />-->
                        </utils:TapAnimationGrid>

                        <utils:TapAnimationGrid BackgroundColor="{DynamicResource Gray-Bg}"
                                                ColumnDefinitions="Auto, *, Auto"
                                                ColumnSpacing="0"
                                                Command="{Binding UpdateThemeCommand}"
                                                IsVisible="{Binding ShowThemeConfig}"
                                                RowSpacing="0"
                                                Tapped="False">

                            <iconize:IconLabel Grid.Column="0"
                                               Margin="16,0,0,0"
                                               Style="{DynamicResource IconLabelStyle}"
                                               Text="{DynamicResource ThemeIcon}" />

                            <Label Grid.Column="1"
                                   Margin="16,12"
                                   FontFamily="{DynamicResource Small}"
                                   HorizontalOptions="Start"
                                   Style="{StaticResource TitleLabelStyle}"
                                   Text="Update Theme"
                                   VerticalOptions="Center" />

                            <!--<iconize:IconLabel Grid.Column="2"
                                 Margin="16,8"
                                 Style="{DynamicResource IconLabelStyle}"
                                 Text="{DynamicResource ArrowRight}" />-->
                        </utils:TapAnimationGrid>

                        <BoxView Style="{DynamicResource SeparatorStyle}" />

                        <Label Margin="16,40,0,16"
                               FontFamily="{DynamicResource SemiBold}"
                               FontSize="12"
                               HorizontalOptions="FillAndExpand"
                               LineHeight="{OnPlatform Default=-1,
                                                       Android=1.25}"
                               Text="EMPLOYEE LIST"
                               TextColor="{DynamicResource Gray-800}"
                               VerticalOptions="Center"
                               VerticalTextAlignment="Center" />

                        <StackLayout x:Name="FilterList"
                                     BindableLayout.ItemsSource="{Binding List}"
                                     Spacing="0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid BackgroundColor="{DynamicResource Gray-Bg}"
                                          ColumnDefinitions="*, Auto"
                                          ColumnSpacing="0"
                                          RowSpacing="0">
                                        <Label Grid.Column="0"
                                               Margin="16,12"
                                               FontFamily="{DynamicResource Small}"
                                               HorizontalOptions="Start"
                                               Style="{StaticResource TitleLabelStyle}"
                                               Text="{Binding DisplayText}"
                                               VerticalOptions="Center" />

                                        <buttons:SfSwitch Grid.Column="1"
                                                          Margin="16,8"
                                                          AllowIndeterminateState="False"
                                                          HeightRequest="28"
                                                          IsOn="{Binding IsChecked}"
                                                          VisualType="Cupertino">
                                            <buttons:SfSwitch.Behaviors>
                                                <utils:SfSwitchCommandBehavior Command="{Binding Path=BindingContext.SelectedFilterCommand, Source={x:Reference FilterList}}"
                                                                               CommandParameter="{Binding .}"
                                                                               Converter="{StaticResource EventArgs}"
                                                                               EventName="StateChanged" />
                                            </buttons:SfSwitch.Behaviors>

                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="On">
                                                        <VisualState.Setters>
                                                            <Setter Property="SwitchSettings">
                                                                <Setter.Value>
                                                                    <buttons:CupertinoSwitchSettings x:TypeArguments="buttons:OnState"
                                                                                                     ThumbBorderColor="{DynamicResource Gray-White}"
                                                                                                     ThumbColor="{DynamicResource Gray-White}"
                                                                                                     TrackBorderColor="{DynamicResource Gray-200}"
                                                                                                     TrackColor="{DynamicResource PrimaryColor}" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Off">
                                                        <VisualState.Setters>
                                                            <Setter Property="SwitchSettings">
                                                                <Setter.Value>
                                                                    <buttons:CupertinoSwitchSettings x:TypeArguments="buttons:OffState"
                                                                                                     ThumbBorderColor="{DynamicResource Gray-300}"
                                                                                                     ThumbColor="{DynamicResource Gray-White}"
                                                                                                     TrackBorderColor="{DynamicResource Gray-300}"
                                                                                                     TrackColor="{DynamicResource Gray-300}" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </buttons:SfSwitch>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>

                        <BoxView Style="{DynamicResource SeparatorStyle}" />

                        <Label Margin="16,40,0,16"
                               FontFamily="{DynamicResource SemiBold}"
                               FontSize="12"
                               HorizontalOptions="FillAndExpand"
                               LineHeight="{OnPlatform Default=-1,
                                                       Android=1.25}"
                               Text="APP INFO"
                               TextColor="{DynamicResource Gray-800}"
                               VerticalOptions="Center"
                               VerticalTextAlignment="Center" />

                        <utils:TapAnimationGrid BackgroundColor="{DynamicResource Gray-Bg}"
                                                ColumnDefinitions="Auto, *, Auto"
                                                ColumnSpacing="0"
                                                IsEnabled="False"
                                                RowSpacing="0"
                                                Tapped="False">

                            <iconize:IconLabel Grid.Column="0"
                                               Margin="16,0,0,0"
                                               Style="{DynamicResource IconLabelStyle}"
                                               Text="{DynamicResource InfoIcon}" />

                            <Label Grid.Column="1"
                                   Margin="16,12"
                                   FontFamily="{DynamicResource Small}"
                                   HorizontalOptions="Start"
                                   Style="{StaticResource TitleLabelStyle}"
                                   Text="version 1.2 (1.0.0.26)"
                                   VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="version " />
                                        <Span Text="{Binding VersionNumber}" />
                                        <Span Text=" (" />
                                        <Span Text="{Binding BuildNumber}" />
                                        <Span Text=")" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </utils:TapAnimationGrid>
                    </StackLayout>
                </ScrollView>
            </AbsoluteLayout>
        </StackLayout>
    </Grid>
</ContentPage>