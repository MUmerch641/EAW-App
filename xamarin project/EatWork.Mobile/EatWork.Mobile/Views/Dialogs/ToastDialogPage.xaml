<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:helpers="clr-namespace:EatWork.Mobile.Utils"
                 xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
                 xmlns:animate="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
                 xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 xmlns:cards="clr-namespace:Syncfusion.XForms.Cards;assembly=Syncfusion.Cards.XForms"
                 BackgroundColor="Transparent"
                 x:Class="EatWork.Mobile.Views.Dialogs.ToastDialogPage">
    <popup:PopupPage.Animation>
        <animate:ScaleAnimation PositionIn="Bottom"
                                PositionOut="Bottom"
                                DurationIn="400"
                                DurationOut="300"
                                EasingIn="SinOut"
                                EasingOut="SinIn"
                                HasBackgroundAnimation="True" />
    </popup:PopupPage.Animation>

    <StackLayout VerticalOptions="EndAndExpand"
                 HorizontalOptions="FillAndExpand">

        <helpers:CustomShadowFrame CornerRadius="4"
                                   HorizontalOptions="FillAndExpand" HeightRequest="60"
                                   Margin="10,10"
                                   BackgroundColor="{DynamicResource Gray-White}"
                                   BorderColor="{StaticResource Gray-200}"
                                   HasShadow="True"
                                   Padding="8,8">

            <cards:SfCardView CornerRadius="4"
                              IndicatorColor="{DynamicResource Success}"
                              IndicatorPosition="Left"
                              IndicatorThickness="6"
                              HorizontalOptions="FillAndExpand"
                              VerticalOptions="FillAndExpand"
                              BackgroundColor="Transparent"
                              x:Name="CardView"
                              BorderColor="{DynamicResource Transparent}">

                <Grid RowSpacing="4" Padding="8,0" ColumnDefinitions="Auto,Auto,*" RowDefinitions="Auto">

                    <iconize:IconLabel Text="{DynamicResource CheckedCircleIcon}"
                                       TextColor="{DynamicResource Success}"
                                       Padding="5,0,5,0"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       FontSize="Large"
                                       Grid.RowSpan="2"
                                       x:Name="Icon" />

                    <Label Text="Message"
                           FontSize="16"
                           FontFamily="{DynamicResource SemiBold}"
                           TextColor="{DynamicResource Dark}"
                           Grid.Column="1"
                           x:Name="Title"
                           Padding="5,0,5,0"
                           LineHeight="{OnPlatform Android=1.25, Default=-1}" />

                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text=""
                           FontSize="14"
                           Padding="5,0,5,0"
                           LineBreakMode="TailTruncation"
                           TextColor="{DynamicResource Dark}"
                           FontFamily="{DynamicResource Medium}"
                           LineHeight="{OnPlatform Android=1.25, Default=-1}"
                           x:Name="Message" />
                </Grid>
            </cards:SfCardView>
        </helpers:CustomShadowFrame>
    </StackLayout>
</popup:PopupPage>