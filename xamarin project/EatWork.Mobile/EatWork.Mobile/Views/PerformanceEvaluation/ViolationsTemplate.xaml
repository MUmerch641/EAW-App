<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EatWork.Mobile.Views.PerformanceEvaluation.ViolationsTemplate">

    <StackLayout.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </StackLayout.Resources>

    <StackLayout VerticalOptions="StartAndExpand"
                 HorizontalOptions="StartAndExpand"
                 Padding="0,8"
                 BackgroundColor="{DynamicResource Gray-Bg}"
                 BindableLayout.ItemsSource="{Binding Holder.Violations}"
                 x:Name="Details">

        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <StackLayout Spacing="10" VerticalOptions="Start"
                             Margin="8,0"
                             Padding="0,0">
                    <!--VIOLATION DATE-->
                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridMyScheduleDetails}">

                        <Label Grid.Column="0"
                               Style="{StaticResource LabelStyleMyScheduleForLabel}"
                               Text="Violation Date:"
                               FontFamily="{DynamicResource Medium}" />

                        <Label Grid.Column="1"
                               Style="{StaticResource LabelStyleMySchedule}"
                               FontFamily="{DynamicResource Medium}"
                               Text="{Binding ViolationDate_String}" />
                    </Grid>

                    <!--VIOLATION NO-->
                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridMyScheduleDetails}">

                        <Label Grid.Column="0"
                               Style="{StaticResource LabelStyleMyScheduleForLabel}"
                               Text="Violation No.:"
                               FontFamily="{DynamicResource Medium}" />

                        <Label Grid.Column="1"
                               Style="{StaticResource LabelStyleMySchedule}"
                               FontFamily="{DynamicResource Medium}"
                               Text="{Binding ViolationNo}" />
                    </Grid>

                    <!--OFFENSE COUNT-->
                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridMyScheduleDetails}">

                        <Label Grid.Column="0"
                               Style="{StaticResource LabelStyleMyScheduleForLabel}"
                               Text="Offense Count:"
                               FontFamily="{DynamicResource Medium}" />

                        <Label Grid.Column="1"
                               Style="{StaticResource LabelStyleMySchedule}"
                               FontFamily="{DynamicResource Medium}"
                               Text="{Binding OffenseCount}" />
                    </Grid>

                    <!--DETAIL-->
                    <Grid ColumnSpacing="0"
                          RowSpacing="0"
                          Margin="0,0"
                          Style="{StaticResource GridMyScheduleDetails}">

                        <Label Grid.Column="0"
                               Style="{StaticResource LabelStyleMyScheduleForLabel}"
                               Text="{Binding ViolationDetail}"
                               FontFamily="{DynamicResource SemiBold}"
                               MaxLines="3"
                               Grid.ColumnSpan="1" />
                    </Grid>
                    
                    <BoxView Style="{DynamicResource SeparatorStyle}"
                             BackgroundColor="{DynamicResource Gray-300}"
                             Margin="0,5" />
                </StackLayout>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </StackLayout>
</StackLayout>