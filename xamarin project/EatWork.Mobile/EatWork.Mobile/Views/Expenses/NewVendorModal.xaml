<?xml version="1.0" encoding="utf-8" ?>
<modal:FormModal xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:modal="clr-namespace:EatWork.Mobile.Utils"
                 xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
                 xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
                 xmlns:control="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
                 x:Class="EatWork.Mobile.Views.TravelRequest.NewVendorModal">

    <modal:FormModal.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </modal:FormModal.Resources>

    <modal:FormModal.Header>
        <Grid ColumnSpacing="0"
              BackgroundColor="{DynamicResource PrimaryColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>

            <Label Text="Add New Vendor"
                   Grid.Column="0"
                   Style="{DynamicResource ModalPageTitleStyle}" />

            <iconize:IconLabel Grid.Column="1"
                               Style="{DynamicResource IconizeIconStyle}"
                               Text="{DynamicResource CloseIcon}"
                               TextColor="{DynamicResource Gray-White}"
                               Padding="15,10,0,10"
                               FontSize="Large">
                <iconize:IconLabel.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseModalCommand}" />
                </iconize:IconLabel.GestureRecognizers>
            </iconize:IconLabel>
        </Grid>
    </modal:FormModal.Header>

    <modal:FormModal.Body>
        <StackLayout Grid.Row="1">
            <!--VENDOR NAME-->
            <control:SfTextInputLayout  Style="{StaticResource InputLayoutStyleWithIcon}"
                                        HasError="{Binding NewSupplierName.IsValid,Converter={modal:InverseBoolConverter}}"
                                        ErrorText="{Binding NewSupplierName.Message}"
                                        Hint="Name  ">
                <Entry Style="{DynamicResource TextBoxStyle}"
                       Text="{Binding NewSupplierName.Value,Mode=TwoWay}"
                       x:Name="txtVendorName"
                       ReturnType="Next"
                       ReturnCommand="{Binding EntryFocusCommand}"
                       ReturnCommandParameter="{Reference txtTINNumber}" />

                <control:SfTextInputLayout.LeadingView>
                    <iconize:IconLabel Text="{StaticResource EmployeeIcon}"
                                       Style="{StaticResource IconizeIconStyle}" />
                </control:SfTextInputLayout.LeadingView>
            </control:SfTextInputLayout>

            <!--TIN-->
            <control:SfTextInputLayout  Style="{StaticResource inputLayoutStyle}"
                                        HasError="{Binding NewTinNumber.IsValid,Converter={modal:InverseBoolConverter}}"
                                        ErrorText="{Binding NewTinNumber.Message}"
                                        Hint="TIN  ">

                <Entry Style="{DynamicResource TextBoxStyle}"
                       Text="{Binding NewTinNumber.Value,Mode=TwoWay}"
                       x:Name="txtTINNumber"
                       ReturnType="Next"
                       ReturnCommand="{Binding EntryFocusCommand}"
                       ReturnCommandParameter="{Reference txtAddress}" />
            </control:SfTextInputLayout>

            <!--ADDRESS-->
            <control:SfTextInputLayout Style="{StaticResource InputLayoutStyleEditor}"
                                       HasError="{Binding NewAddress.IsValid,Converter={modal:InverseBoolConverter}}"
                                       ErrorText="{Binding NewAddress.Message}"
                                       Hint="Address  ">
                <Editor Text="{Binding NewAddress.Value, Mode=TwoWay}"
                        Style="{DynamicResource EditorStyle}"
                        x:Name="txtAddress" />
            </control:SfTextInputLayout>

            <FlexLayout Margin="0,20,0,0"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Direction="Row"
                        JustifyContent="Center"
                        AlignItems="Center">

                <buttons:SfButton Text="Add"
                                  Style="{StaticResource WalkthroughButtonStyle}"
                                  Command="{Binding AddVendorCommand}" />
            </FlexLayout>
        </StackLayout>
    </modal:FormModal.Body>
</modal:FormModal>