<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:utils="clr-namespace:EatWork.Mobile.Utils"
             xmlns:effect="clr-namespace:EatWork.Mobile.Utils.Effects"
             xmlns:template="clr-namespace:EatWork.Mobile.Views.Template"
             xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
             xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
             xmlns:gradient="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
             xmlns:control="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
             Style="{StaticResource ContentPageNoiOSSafeArea}"
             Title="Change Restday Request"
             mc:Ignorable="d"
             x:Class="EatWork.Mobile.Views.Requests.ChangeRestdayPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <utils:CustomConverter x:Key="EventArgs" />
            <utils:TextToBoolConverter x:Key="TextToBoolConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <utils:EventToCommandBehavior Command="{Binding PageAppearingCommand}"
                                      EventName="Appearing" />
        <utils:EventToCommandBehavior Command="{Binding PageDisappearingCommand}"
                                      EventName="Disappearing" />
    </ContentPage.Behaviors>

    <Grid Style="{StaticResource TitleViewContent}">

        <gradient:SfGradientView Grid.Row="0"
                                 Style="{DynamicResource NavBarStyle}" />

        <ContentView>
            <ContentView.Effects>
                <effect:SafeAreaPaddingEffect />
            </ContentView.Effects>
            <utils:TitleView Title="Change Restday Request"
                             TitleColor="{StaticResource Gray-White}">
                <utils:TitleView.LeadingView>
                    <iconize:IconButton Text="{StaticResource BackButtonIcon}"
                                        Command="{Binding BackButtonCommand}"
                                        Style="{StaticResource IconButtonStyle}" />
                </utils:TitleView.LeadingView>
                <utils:TitleView.TrailingView>
                    <StackLayout Orientation="Horizontal">
                        <iconize:IconButton Text="{StaticResource FileAttachmentIcon}"
                                            Command="{Binding ViewFileAttachmentCommand}"
                                            Style="{StaticResource IconButtonStyle}"
                                            IsVisible="{Binding Holder.IsEnabled,Converter={utils:InverseBoolConverter}}" />

                        <iconize:IconButton Text="{StaticResource InfoIcon}"
                                            Command="{Binding ViewTransactionHistoryCommand}"
                                            Style="{StaticResource IconButtonStyle}"
                                            IsVisible="{Binding Holder.IsEnabled,Converter={utils:InverseBoolConverter}}" />
                    </StackLayout>
                </utils:TitleView.TrailingView>
            </utils:TitleView>
        </ContentView>

        <StackLayout Grid.Row="2"
                     Spacing="0"
                     VerticalOptions="CenterAndExpand">
            <ScrollView HorizontalScrollBarVisibility="Never"
                        VerticalScrollBarVisibility="Never">
                <AbsoluteLayout>
                    <busyindicator:SfBusyIndicator x:Name="busyindicator"
                                                   Style="{StaticResource BusyIndicatorStyleForms}"
                                                   IsBusy="{Binding IsBusy}" />

                    <Grid AbsoluteLayout.LayoutBounds="0,0,1,1"
                          AbsoluteLayout.LayoutFlags="All"
                          IsVisible="{Binding IsBusy, Converter={utils:InverseBoolConverter}}"
                          HorizontalOptions="FillAndExpand"
                          VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <!--<RowDefinition Height="55" />-->
                        </Grid.RowDefinitions>

                        <Grid Padding="15"
                              RowSpacing="0"
                              ColumnSpacing="0"
                              HorizontalOptions="CenterAndExpand"
                              VerticalOptions="CenterAndExpand">

                            <utils:CustomShadowFrame Padding="0,0,0,0"
                                                     HorizontalOptions="FillAndExpand"
                                                     Style="{StaticResource CustomFrameStyle}">

                                <StackLayout Style="{StaticResource StackLayoutRequestForm}">
                                    <!--SWAP WITH-->
                                    <control:SfTextInputLayout Style="{StaticResource InputLayoutStyleWithIcon}"
                                                               Hint="Swap With  "
                                                               ErrorText=""
                                                               HasError="{Binding Holder.ErrorSwapWith,Mode=TwoWay}">
                                        <Entry FontSize="{StaticResource Small}"
                                               Text="{Binding Holder.SwapWith, Mode=TwoWay}"
                                               Style="{StaticResource TextBoxStyle}"
                                               IsEnabled="{Binding Holder.IsEnabled}"
                                               IsReadOnly="True" />
                                        <control:SfTextInputLayout.LeadingView>
                                            <iconize:IconLabel Text="{StaticResource AccountIcon}"
                                                               Style="{StaticResource IconizeIconStyle}" />
                                        </control:SfTextInputLayout.LeadingView>
                                        <control:SfTextInputLayout.TrailingView>
                                            <iconize:IconLabel Text="{StaticResource EllipsisIcon}"
                                                               Style="{StaticResource IconizeIconStyle}"
                                                               IsEnabled="{Binding Holder.IsEnabled}">
                                                <iconize:IconLabel.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding SelectEmployeeCommand}" />
                                                </iconize:IconLabel.GestureRecognizers>
                                            </iconize:IconLabel>
                                        </control:SfTextInputLayout.TrailingView>
                                    </control:SfTextInputLayout>

                                    <!--ORIGINAL DATE-->
                                    <control:SfTextInputLayout Style="{StaticResource InputLayoutStyleWithIcon}"
                                                               Hint="Original Restday  "
                                                               ErrorText="{Binding Holder.ErrorOriginalDateMessage,Mode=TwoWay}"
                                                               HasError="{Binding Holder.ErrorOriginalDate,Mode=TwoWay}">
                                        <DatePicker Style="{StaticResource DatePickerStyle}"
                                                    Date="{Binding Holder.ChangeRestdayModel.RestDayDate, Mode=TwoWay}"
                                                    IsEnabled="{Binding Holder.IsEnabled}">
                                            <DatePicker.Behaviors>
                                                <utils:DatePickerCommandBehavior EventName="DateSelected"
                                                                                 Command="{Binding GetScheduleCommand}"
                                                                                 Converter="{StaticResource EventArgs}"
                                                                                 CommandParameter="1" />
                                            </DatePicker.Behaviors>
                                        </DatePicker>
                                        <control:SfTextInputLayout.LeadingView>
                                            <iconize:IconLabel Text="{StaticResource DateIcon}"
                                                               Style="{StaticResource IconizeIconStyle}" />
                                        </control:SfTextInputLayout.LeadingView>
                                    </control:SfTextInputLayout>

                                    <!--REQUESTED DATE-->
                                    <control:SfTextInputLayout Style="{StaticResource InputLayoutStyleWithIcon}"
                                                               Hint="New Restday  "
                                                               ErrorText="{Binding Holder.ErrorRequestedDateMessage,Mode=TwoWay}"
                                                               HasError="{Binding Holder.ErrorRequestedDate,Mode=TwoWay}">
                                        <DatePicker Style="{StaticResource DatePickerStyle}"
                                                    Date="{Binding Holder.ChangeRestdayModel.RequestDate, Mode=TwoWay}"
                                                    IsEnabled="{Binding Holder.IsEnabled}" />
                                        <control:SfTextInputLayout.LeadingView>
                                            <iconize:IconLabel Text="{StaticResource DateIcon}"
                                                               Style="{StaticResource IconizeIconStyle}" />
                                        </control:SfTextInputLayout.LeadingView>
                                    </control:SfTextInputLayout>

                                    <!-- WORK DATES -->
                                    <!--<Grid>
                                         <Grid.RowDefinitions>
                                         <RowDefinition Height="*" />
                                         </Grid.RowDefinitions>
                                         <Grid.ColumnDefinitions>
                                         <ColumnDefinition Width="*" />
                                         </Grid.ColumnDefinitions>
                                         
                                         <StackLayout Grid.Row="0" Grid.Column="0">
                                         <control:SfTextInputLayout LeadingViewPosition="Inside"
                                         Style="{StaticResource inputLayoutStyle}"
                                         Hint="Start Date">
                                         
                                         <DatePicker Style="{StaticResource DatePickerStyle}"
                                         Date="{Binding Holder.RestDayDateStart, Mode=TwoWay}"
                                         x:Name="dtpInclusiveStartDate"
                                         IsEnabled="{Binding Holder.IsEnabled}">
                                         <DatePicker.Behaviors>
                                         <utils:DatePickerCommandBehavior EventName="DateSelected"
                                         Command="{Binding InclusiveStartDateChangedCommand}"
                                         Converter="{StaticResource EventArgs}" />
                                         </DatePicker.Behaviors>
                                         </DatePicker>
                                         <control:SfTextInputLayout.HintLabelStyle>
                                         <control:LabelStyle FontSize="14" FontFamily="{DynamicResource Regular}" />
                                         </control:SfTextInputLayout.HintLabelStyle>
                                         <control:SfTextInputLayout.ErrorLabelStyle>
                                         <control:LabelStyle FontSize="14" FontFamily="{DynamicResource Regular}" />
                                         </control:SfTextInputLayout.ErrorLabelStyle>
                                         <control:SfTextInputLayout.LeadingView>
                                         <iconize:IconLabel Text="{StaticResource DateIcon}" Style="{StaticResource IconizeIconStyle}" />
                                         </control:SfTextInputLayout.LeadingView>
                                         </control:SfTextInputLayout>
                                         </StackLayout>
                                         <StackLayout Grid.Row="0" Grid.Column="1">
                                         <control:SfTextInputLayout LeadingViewPosition="Inside"
                                         Style="{StaticResource inputLayoutStyle}"
                                         Hint="End Date">
                                         <DatePicker x:Name="dtpInclusiveEndDate"
                                         FontSize="Small"
                                         HeightRequest="45"
                                         FontFamily="{DynamicResource Regular}"
                                         Date="{Binding Holder.RestDayDateEnd, Mode=OneWay}"
                                         IsEnabled="{Binding Holder.IsEnabled}">
                                         <DatePicker.Behaviors>
                                         <utils:DatePickerCommandBehavior EventName="DateSelected"
                                         Command="{Binding GetScheduleCommand}"
                                         Converter="{StaticResource EventArgs}" />
                                         </DatePicker.Behaviors>
                                         </DatePicker>
                                         <control:SfTextInputLayout.HintLabelStyle>
                                         <control:LabelStyle FontSize="14" FontFamily="{DynamicResource Regular}" />
                                         </control:SfTextInputLayout.HintLabelStyle>
                                         <control:SfTextInputLayout.ErrorLabelStyle>
                                         <control:LabelStyle FontSize="14" FontFamily="{DynamicResource Regular}" />
                                         </control:SfTextInputLayout.ErrorLabelStyle>
                                         <control:SfTextInputLayout.LeadingView>
                                         <iconize:IconLabel Text="{StaticResource DateIcon}" Style="{StaticResource IconizeIconStyle}" />
                                         </control:SfTextInputLayout.LeadingView>
                                         </control:SfTextInputLayout>
                                         </StackLayout>
                                         </Grid>-->

                                    <!--DETAILS-->
                                    <control:SfTextInputLayout Style="{StaticResource InputLayoutStyleEditor}"
                                                               ErrorText=""
                                                               HasError="{Binding Holder.ErrorReason,Mode=TwoWay}"
                                                               Hint="Specify details  ">
                                        <Editor Style="{DynamicResource EditorStyle}"
                                                Text="{Binding Holder.ChangeRestdayModel.Reason, Mode=TwoWay}"
                                                IsEnabled="{Binding Holder.IsEnabled}" />
                                    </control:SfTextInputLayout>

                                    <!--RESTDAY LIST GRID-->
                                    <!--<StackLayout VerticalOptions="CenterAndExpand"
                                         HorizontalOptions="FillAndExpand"
                                         Spacing="20"
                                         Padding="15">-->
                                    <!--<syncfusion:SfDataGrid x:Name="dataGrid"
                                         ColumnSizer="Star"
                                         AutoGenerateColumns="False"
                                         ItemsSource="{Binding Holder.RestDayList,Mode=TwoWay}">
                                         <syncfusion:SfDataGrid.Columns x:TypeArguments="syncfusion:Columns">
                                         <syncfusion:GridDateTimeColumn HeaderText="Original Restday"
                                         HeaderFont="{DynamicResource SemiBold}"
                                         MappingName="OrignalRestday"
                                         HeaderCellTextSize="15"
                                         Format="MM/dd/yyyy" />
                                         <syncfusion:GridDateTimeColumn HeaderText="New Restday"
                                         HeaderFont="{DynamicResource SemiBold}"
                                         MappingName="NewRestday"
                                         HeaderCellTextSize="15"
                                         Format="MM/dd/yyyy" />
                                         </syncfusion:SfDataGrid.Columns>
                                         </syncfusion:SfDataGrid>-->
                                    <!--</StackLayout>-->

                                    <!--BUTTONS-->
                                    <template:RequestFooterTemplate2 />
                                </StackLayout>
                            </utils:CustomShadowFrame>
                        </Grid>
                    </Grid>
                </AbsoluteLayout>
            </ScrollView>
        </StackLayout>
    </Grid>
</ContentPage>