<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EatWork.Mobile.Views.Requests.LeaveRequest.LeaveDocumentListPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:converter="clr-namespace:EatWork.Mobile.Utils"
             xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
             xmlns:shared="clr-namespace:EatWork.Mobile.Views.Shared"
             xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             Title="Documents"
             Style="{StaticResource ContentPage}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:TextToBoolConverter x:Key="TextToBoolConverter" />
            <Style x:Key="btnStyle" TargetType="buttons:SfButton">
                <Setter Property="CornerRadius" Value="3" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="BorderColor" Value="Black" />
                <Setter Property="BorderWidth" Value="0.5" />
                <Setter Property="WidthRequest" Value="1000" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="VerticalOptions" Value="EndAndExpand" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <busyindicator:SfBusyIndicator x:Name="busyindicator"
                                           IsBusy="{Binding IsBusy}"
                                           Style="{StaticResource BusyIndicatorStyle}" />

            <StackLayout AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         IsVisible="{Binding IsBusy, Converter={converter:InverseBoolConverter}}">

                <shared:NoItemsPartialPage DetailsText="No items available to display."
                                           ImageSource="Resume.svg"
                                           IsVisible="{Binding FormHelper.ShowDocumentList, Converter={converter:InverseBoolConverter}}"
                                           TitleText="NO DOCUMENTS" />
            </StackLayout>

            <Grid AbsoluteLayout.LayoutBounds="0,0,1,1"
                  AbsoluteLayout.LayoutFlags="All"
                  ColumnSpacing="0"
                  RowSpacing="0">
                <Grid.RowDefinitions>
                    <!--<RowDefinition Height="Auto" />
                         <RowDefinition Height="Auto" />-->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0"
                             Margin="10,10"
                             Spacing="0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               FontFamily="{DynamicResource Bold}"
                               FontSize="20"
                               HorizontalOptions="Start"
                               Text="Documents"
                               TextColor="{DynamicResource Gray-900}" />

                        <buttons:SfButton x:Name="SkipButton"
                                          Grid.Column="1"
                                          BackgroundColor="Transparent"
                                          Command="{Binding CloseModalCommand}"
                                          CornerRadius="20"
                                          FontFamily="{DynamicResource SemiBold}"
                                          HeightRequest="40"
                                          HorizontalOptions="End"
                                          Text="Close"
                                          TextColor="{x:StaticResource HyperLink}"
                                          VerticalOptions="StartAndExpand"
                                          WidthRequest="80" />
                    </Grid>

                    <Grid Margin="0,20,0,0"
                          ColumnSpacing="0"
                          IsVisible="{Binding IsBusy, Converter={converter:InverseBoolConverter}}"
                          RowSpacing="0">

                        <syncfusion:SfListView x:Name="FileAttachmentListView"
                                               AllowSwiping="False"
                                               AutoFitMode="Height"
                                               IsVisible="{Binding FormHelper.ShowDocumentList}"
                                               ItemSpacing="0,0,0,1"
                                               ItemsSource="{Binding FormHelper.LeaveDocumentModel}"
                                               LoadMoreOption="AutoOnScroll"
                                               SelectionMode="None"
                                               TapCommand="{Binding DownloadCommand}">
                            <syncfusion:SfListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Spacing="0">

                                            <Grid ColumnSpacing="0"
                                                  HeightRequest="72"
                                                  RowSpacing="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <iconize:IconLabel Grid.RowSpan="3"
                                                                   Margin="17,0"
                                                                   FontSize="18"
                                                                   Text="{StaticResource ReasonIcon}"
                                                                   TextColor="{DynamicResource PrimaryColor}"
                                                                   VerticalOptions="CenterAndExpand">
                                                    <iconize:IconLabel.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.DownloadAttachedFileCommand, Source={x:Reference FileAttachmentListView}}" CommandParameter="{Binding .}" />
                                                    </iconize:IconLabel.GestureRecognizers>
                                                </iconize:IconLabel>

                                                <Label Grid.Column="1"
                                                       Grid.ColumnSpan="3"
                                                       Margin="0,13,0,0"
                                                       FontFamily="{DynamicResource Medium}"
                                                       FontSize="16"
                                                       HeightRequest="24"
                                                       Text="{Binding FileName}"
                                                       TextColor="{DynamicResource Gray-900}" />

                                                <Label Grid.Row="1"
                                                       Grid.Column="1"
                                                       Margin="0,0,0,14"
                                                       FontFamily="{DynamicResource Medium}"
                                                       FontSize="14"
                                                       HeightRequest="21"
                                                       Text="{Binding DocumentName}"
                                                       TextColor="{DynamicResource Gray-700}" />

                                                <iconize:IconImage Grid.RowSpan="3"
                                                                   Grid.Column="3"
                                                                   Margin="15,0,15,0"
                                                                   HorizontalOptions="End"
                                                                   Icon="{StaticResource DeleteIcon}"
                                                                   IconColor="{StaticResource Error}"
                                                                   IsEnabled="{Binding ShowCommand}"
                                                                   IsVisible="{Binding ShowCommand}"
                                                                   Style="{StaticResource IconImageApproval}"
                                                                   VerticalOptions="Center">
                                                    <iconize:IconImage.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.RemoveFileAttachmentCommand, Source={x:Reference FileAttachmentListView}}" CommandParameter="{Binding .}" />
                                                    </iconize:IconImage.GestureRecognizers>
                                                </iconize:IconImage>

                                                <BoxView Grid.Row="2"
                                                         Grid.ColumnSpan="4"
                                                         Style="{DynamicResource SeparatorStyle}" />
                                            </Grid>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </syncfusion:SfListView.ItemTemplate>
                        </syncfusion:SfListView>
                    </Grid>
                </StackLayout>
            </Grid>

            <StackLayout AbsoluteLayout.LayoutBounds=".95 ,.97, AutoSize, AutoSize"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         IsVisible="{Binding IsBusy, Converter={converter:InverseBoolConverter}}">

                <iconize:IconButton BackgroundColor="{DynamicResource PrimaryColor}"
                                    Command="{Binding AddDocumentCommand}"
                                    CornerRadius="34"
                                    FontSize="22"
                                    HeightRequest="68"
                                    HorizontalOptions="CenterAndExpand"
                                    IsVisible="{Binding FormHelper.IsEnabled}"
                                    Text="{StaticResource AddIcon2}"
                                    TextColor="{StaticResource Gray-White}"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="68" />
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>