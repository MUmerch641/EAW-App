<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:ffsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             xmlns:core="clr-namespace:Syncfusion.XForms.Core;assembly=Syncfusion.Core.XForms"
             x:Class="EatWork.Mobile.Views.Shared.NoItemsPartialPage">
    
    <StackLayout.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </StackLayout.Resources>

    <StackLayout BackgroundColor="Transparent"
                 Spacing="0"
                 VerticalOptions="Center"
                 Padding="20,0,20,0">
        <!--  Image for display svg image  -->
        <ffsvg:SvgCachedImage x:Name="ErrorImage"
                              Margin="{x:OnIdiom Phone='0,0,0,0', Desktop='0',Tablet='0'}"
                              BackgroundColor="Transparent"
                              HeightRequest="{core:OnPlatformOrientationDoubleValue Default=300,
                              AndroidPhonePortrait=250,
                              AndroidPhoneLandscape=140,
                              iOSPhonePortrait=200,
                              iOSPhoneLandscape=140}"
                              Source="NoItems.svg"
                              VerticalOptions="Center"
                              HorizontalOptions="Center"
                              WidthRequest="{x:OnIdiom Phone=250, Desktop=300, Tablet=300}"
                              FadeAnimationEnabled="False" />

        <!--  Label to display header  -->
        <Label Margin="0,32,0,8"
               FontSize="20"
               FontFamily="{DynamicResource SemiBold}"
               HorizontalTextAlignment="Center"
               Text="NO ITEMS"
               Style="{StaticResource LabelStyle}"
               VerticalTextAlignment="Center"
               x:Name="HeaderText"/>

        <!--  Label to display content  -->
        <Label Margin="8,0,8,0"
               FontFamily="{DynamicResource Medium}"
               FontSize="16"
               Style="{StaticResource LabelStyle}"
               VerticalTextAlignment="Center"
               x:Name="ContentText"/>
    </StackLayout>
</StackLayout>